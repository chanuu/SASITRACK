
<div id="createStyleLoading">

    <form name="styleloadingCreateForm" role="form" novalidate class="form-validation">


        <div class=" margin">
            <h3 class="block">{{selectedStyle.styleNo}} Details Details </h3>
        </div>

        <div class="panel-body">
            <div class="row margin">

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Style No</label>
                    <div class="controls">
                        <input type="text" typeahead-on-select="setStyle($item)" ng-model="selectedStyle" uib-typeahead="style as style.styleNo for style in vm.styles | filter:$viewValue | limitTo:8" class="form-control">
                        <span class="help-inline"></span>
                    </div>

                </div>

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Line No</label>
                    <div class="controls">
                        <input type="text" typeahead-on-select="setLineNo($item)" ng-model="selectedLineNo" uib-typeahead="department as department.name for department in vm.departments | filter:$viewValue | limitTo:8" class="form-control">
                        <span class="help-inline"></span>
                    </div>

                </div>
            </div>



            <div class="row margin">
                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">From Date </label>

                    <p class="input-group">
                        <input type="text" class="form-control" uib-datepicker-popup ng-model="fdate" is-open="dpOpenStatus.fdate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />

                        <span class="input-group-btn">
                            <button type="button"
                                    class="btn btn-default"
                                    ng-click="setDpOpenStatus('fdate', $event)">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </button>
                        </span>
                    </p>


                </div>

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">To Date </label>

                    <p class="input-group">
                        <input type="text" class="form-control" uib-datepicker-popup ng-model="tdate" is-open="dpOpenStatus.todate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />

                        <span class="input-group-btn">
                            <button type="button"
                                    class="btn btn-default"
                                    ng-click="setDpOpenStatus('todate', $event)">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </button>
                        </span>
                    </p>
                </div>

            </div>



            <div class="row margin">

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Remark</label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.styleloading.remark" name="remark" ng-maxlength="100" ng-messages="styleloadingCreateForm.remark.$error" />

                        <div ng-messages="styleloadingCreateForm.remark.$error" ng-if="styleloadingCreateForm.remark.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

            </div>


            <hr />

            <div class="event-actions">



                <a class="btn btn-sm btn-green" angular-ripple ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                <a class="btn btn-sm btn-blue" angular-ripple ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

            </div>


        </div>

    </form>


</div>