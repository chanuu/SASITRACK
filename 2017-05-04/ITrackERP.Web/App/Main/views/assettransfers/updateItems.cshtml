<div id="UpdateAssetTransferDetails" ng-controller="app.views.assettransfers.updateItems as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Asset Transfer Details
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>


            <div class="panel-body">

                <form name="assetTransferHeaderDetailUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Asset No</label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="setAssetNo($item)" ng-model="selectedAssetNo" uib-typeahead="assetno as assetno.assetNo for assetno in vm.assets | filter:$viewValue | limitTo:8" class="form-control" required>
                                <span class="help-inline"></span>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Description </label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assettransfer.description" name="description" ng-maxlength="100" ng-messages="assetTransferHeaderDetailUpdateForm.description.$error" />

                                <div ng-messages="assetTransferHeaderDetailUpdateForm.description.$error" ng-if="assetTransferHeaderDetailUpdateForm.description.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to asset transfer header</a>

                    </div>


</form>

</div>
        </div>

    </div>
</div>