
<div id="createDividingPlanHeader">

    <form name="dividingplanCreateForm" role="form" novalidate class="form-validation">


        <div class=" margin">
            <h3 class="block">{{selectedStyle.styleNo}} Details Details </h3>
        </div>

        <div class="panel-body">
            <div class="row margin">
            
                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Style No</label>
                    <div class="controls">
                        <input type="text" typeahead-on-select="setStyle($item)" ng-model="selectedStyle" uib-typeahead="style as style.styleNo for style in vm.styles | filter:$viewValue | limitTo:8" class="form-control" required>
                        <span class="help-inline"></span>
                    </div>

                </div>

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Line No</label>
                    <div class="controls">
                        <input type="text" typeahead-on-select="setLineNo($item)" ng-model="selectedLineNo" uib-typeahead="department as department.name for department in vm.departments | filter:$viewValue | limitTo:8" class="form-control" required>
                        <span class="help-inline"></span>
                    </div>

                </div>
            </div>



            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Total Employee </label>                   
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.dividingplan.totalEmployee" name="totalEmployee" ng-messages="dividingplanCreateForm.totalEmployee.$error" required />

                        <div ng-messages="dividingplanCreateForm.totalEmployee.$error" ng-if="dividingplanCreateForm.totalEmployee.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Target </label>
                  
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.dividingplan.target" name="target" ng-messages="dividingplanCreateForm.target.$error" required />

                        <div ng-messages="dividingplanCreateForm.target.$error" ng-if="dividingplanCreateForm.target.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

            </div>



            <div class="row margin">

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Production Per Hour </label>                  
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.dividingplan.productionPerHour" name="productionPerHour" ng-messages="dividingplanCreateForm.productionPerHour.$error" required />

                        <div ng-messages="dividingplanCreateForm.productionPerHour.$error" ng-if="dividingplanCreateForm.productionPerHour.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Remark</label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.dividingplan.remark" name="remark" ng-maxlength="100" ng-messages="dividingplanCreateForm.remark.$error" />

                        <div ng-messages="dividingplanCreateForm.remark.$error" ng-if="dividingplanCreateForm.remark.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

            </div>


            <hr />

            <div class="event-actions">



                <a class="btn btn-sm btn-green" angular-ripple ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                <a class="btn btn-sm btn-blue" angular-ripple ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

            </div>


        </div>

    </form>


</div>