<div id="departmentDetail" ng-controller="app.views.departments.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Departments
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.department.name}} Details</h3>


            <div class="panel-body">
                <form name="departmentUpdateForm" role="form" novalidate class="form-validation">


                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Name </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.department.name" name="name" ng-messages="departmentUpdateForm.name.$error" required />

                                <div ng-messages="departmentUpdateForm.name.$error" ng-if="departmentUpdateForm.name.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Bardcode No </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.department.barcodeNo" name="barcodeNo" ng-messages="departmentUpdateForm.barcodeNo.$error" required />

                                <div ng-messages="departmentUpdateForm.barcodeNo.$error" ng-if="departmentUpdateForm.barcodeNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>                        
                    </div>

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Length </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.department.length" name="length" ng-messages="departmentUpdateForm.length.$error" required />

                                <div ng-messages="departmentUpdateForm.length.$error" ng-if="departmentUpdateForm.length.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Width </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.department.width" name="width" ng-messages="departmentUpdateForm.width.$error" required />

                                <div ng-messages="departmentUpdateForm.width.$error" ng-if="departmentUpdateForm.width.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Remark</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.department.remark" name="remark" ng-maxlength="100" ng-messages="departmentUpdateForm.remark.$error" />

                                <div ng-messages="departmentUpdateForm.remark.$error" ng-if="departmentUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                   

                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to departments</a>

                    </div>


                </form>

            </div>
        </div>

    </div>
</div>