<div id="stockReceiveHeaderDetail" ng-controller="app.views.stockreceiveheaders.detail as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Stock Receive Headers
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">
            <div class="event-actions">
                <a class="btn btn-primary btn-sm btn-blue" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to stock receive header</a>

            </div>
            <hr />



            <h3 class="block">{{vm.stockreceiveheader.receiveNoteNo}} Details</h3>


            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Receive Note No</label>
                        <div class="controls">
                            <div class="">{{vm.stockreceiveheader.receiveNoteNo}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Date</label>
                        <div class="controls">
                            <div class="">{{vm.stockreceiveheader.date | date:'yyyy/MM/dd'}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                   

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Remark</label>
                        <div class="controls">
                            <div> {{vm.stockreceiveheader.remark}}</div>

                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">By</label>
                        <div class="controls">
                            <div class="">{{vm.stockreceiveheader.by}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

            </div>


            <div class="row margin-adjust">

                <button ng-click="vm.receiveNoteItemCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("Create")</button>
            </div>
            <div class="row margin-adjust">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th># </th>
                        <th>@L("Item Code") </th>
                        <th>@L("Is Include Serials")</th>
                        <th>@L("Purchase Price") </th>
                        <th>@L("Nos")</th>
                        <th>@L("Action")</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="stockreceiveheader in vm.stockreceiveheader.receiveNoteItems|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{stockreceiveheader.itemCode }}</td>
                        <td>{{stockreceiveheader.isIncludeSerials }}</td>
                        <td>{{stockreceiveheader.purchasePrice }}</td>
                        <td>{{stockreceiveheader.nos }}</td>


                        <td>
                            <a ng-href="#/stockreceiveheaders/item/{{stockreceiveheader.id}}"><i class="fa fa-search text-green"></i></a>
                            <a ng-href="#/stockreceiveheaders/item/update/{{stockreceiveheader.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                            <a ng-click="vm.delete(stockreceiveheader)"><i class="fa fa-close text-red small-icons"></i></a>
                        </td>

                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>

        </div>

    </div>
</div>