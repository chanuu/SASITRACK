<div id="ccategoryDetail" ng-controller="app.views.categories.detail as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Categories
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">
            <div class="event-actions">
                <a class="btn btn-primary btn-sm btn-blue" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to categories</a>

            </div>
            <hr />

            <h3 class="block">{{vm.category.name }} Details</h3>
            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Type </label>
                        <div class="controls">
                            <div class="">{{vm.category.type }}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Name </label>
                        <div class="controls">
                            <div class="">{{vm.category.name }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Level No </label>
                        <div class="controls">
                            <div class="">{{vm.category.levelNo }}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Category Name </label>
                        <div class="controls">
                            <div class="">{{vm.category.categoryName }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Remark </label>
                        <div class="controls">
                            <div class="">{{vm.category.remark }}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                   
                </div>
            </div>           
        </div>

    </div>
</div>