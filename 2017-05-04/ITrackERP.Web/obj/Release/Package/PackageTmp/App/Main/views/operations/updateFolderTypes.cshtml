<div id="UpdateFolderDetails" ng-controller="app.views.operations.updateFolderTypes as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Operation Details
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>


            <div class="panel-body">
                <form name="folderUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Folder Type </label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.operation.folderType" name="folderType" ng-messages="folderUpdateForm.folderType.$error" required />

                                <div ng-messages="folderUpdateForm.folderType.$error" ng-if="folderUpdateForm.folderType.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Remark </label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.operation.remark" name="remark" ng-maxlength="100" ng-messages="folderUpdateForm.remark.$error" />

                                <div ng-messages="folderUpdateForm.remark.$error" ng-if="folderUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to operation pool</a>

                    </div>


</form>

</div>
        </div>

    </div>
</div>