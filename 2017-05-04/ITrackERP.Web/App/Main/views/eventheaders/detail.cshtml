<div id="EventHeaderDetail" ng-controller="app.views.eventheaders.detail as vm">
    <route-loading-indicator></route-loading-indicator>


    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
           Event Header
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">
            <div class="event-actions">
                <a class="btn btn-primary btn-sm btn-blue" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to event header</a>

            </div>
            <hr />



            <h3 class="block">{{vm.eventheaders.name}} Details</h3>


            <div class="panel-body">

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Name </label>
                        <div class="controls">
                            <div class="">{{vm.eventheaders.name }}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Description</label>
                        <div class="controls">
                            <div class="">{{vm.eventheaders.description}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Type</label>
                        <div class="controls">
                            <div class="">{{vm.eventheaders.type}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Date </label>
                        <div class="controls">
                            <div class="">{{vm.eventheaders.date | date:'yyyy/MM/dd'}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Frequency</label>
                        <div class="controls">
                            <div type="text" class="">{{vm.eventheaders.frequency}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Expected Date </label>
                        <div class="controls">
                            <div class="">{{vm.eventheaders.expectedDate | date:'yyyy/MM/dd'}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                   

                </div>
                <div class="row margin">

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Department</label>
                        <div class="controls">
                            <div class="">{{vm.eventheaders.department }}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Venue  </label>
                        <div class="controls">
                            <div class="">{{vm.eventheaders.venue }}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                              
            </div>

        </div>

        <br />
        <br />

        <div class="row">
            <div class="col-lg-12">

                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                            <a class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                        Specification Of Event
                    </div>




                    <div uib-collapse="isCollapsed" class="panel-body">
                        <div>

                            <uib-tabset active="active">
                                <uib-tab index="0">
                                    <uib-tab-heading>
                                        <i class="glyphicon glyphicon-bell"></i> Album Details
                                    </uib-tab-heading>
                                    <br>
                                    <br>
                                    <br>
                                    <div class="hpanel">
                                        <div class="panel-heading">
                                            <div class="panel-tools">
                                                <a class="showhide" ng-click="isCollapsed2 = !isCollapsed2"><i class="fa fa-chevron-up"></i></a>
                                                <a class="closebox"><i class="fa fa-times"></i></a>
                                            </div>
                                            Album Details
                                        </div>

                                        <div uib-collapse="isCollapsed2" class="panel-body">

                                            <div class="row margin-adjust">

                                                <button ng-click="vm.albumCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateAlbumItem")</button>
                                            </div>

                                            <ul class="gallery gallery1">
                                                <li ng-repeat="image in images">
                                                    <div class="col-md-4 col-sm-12 margin">
                                                        <button class="close" aria-hidden="true" ng-click="vm.deleteAlbumItem(image)">×</button>
                                                        <a ng-click="openLightboxModal($index)">
                                                            <img ng-src="{{image.thumbUrl}}" class="img-thumbnail">
                                                        </a>
                                                    </div>
                                                </li>
                                            </ul>


                                        </div>
                                    </div>

                                </uib-tab>

                                <uib-tab index="3" select="">
                                    <uib-tab-heading>
                                        <i class="glyphicon glyphicon-bell"></i> Invitee Details
                                    </uib-tab-heading>
                                    <br>
                                    <br>
                                    <br>
                                    <div class="hpanel">
                                        <div class="panel-heading">
                                            <div class="panel-tools">
                                                <a class="showhide" ng-click="isCollapsed3 = !isCollapsed3"><i class="fa fa-chevron-up"></i></a>
                                                <a class="closebox"><i class="fa fa-times"></i></a>
                                            </div>
                                            Invitee Details
                                        </div>

                                        <div uib-collapse="isCollapsed3" class="panel-body">

                                            <div class="row margin-adjust">

                                                <button ng-click="vm.inviteeCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateInvitee")</button>
                                            </div>
                                            <div class="row margin-adjust">
                                                <form class="">
                                                    <div class="input-group">
                                                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                                        </span>
                                                    </div>
                                                </form>
                                            </div>

                                            <table class="table table-striped table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th># </th>
                                                        <th>@L("Name") </th>
                                                        <th>@L("Status")</th>
                                                        <th>@L("Action")</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-animate="'animate'" dir-paginate="invitee in vm.eventheaders.invitees|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                                        <td>{{invitee.name }}</td>
                                                        <td>{{invitee.status }}</td>


                                                        <td>
                                                            <!--  <a ng-href="#/operations/{{operation.id}}"><i class="fa fa-search text-green"></i></a> -->
                                                            <a ng-href="#/eventheader/invitee/update/{{invitee.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                                            <a ng-click="vm.deleteInvitee(invitee)"><i class="fa fa-close text-red small-icons"></i></a>
                                                        </td>

                                                    </tr>
                                                </tbody>
                                                <dir-pagination-controls max-size="5"
                                                                         direction-links="true"
                                                                         boundary-links="true">
                                                </dir-pagination-controls>
                                            </table>

                                        </div>
                                    </div>
                                </uib-tab>

                            </uib-tabset>

                        </div>

                    </div>

                </div>

            </div>
        </div>





        <br />






        <br />
        <br />





        <br />
        <br />






    </div>
</div>
