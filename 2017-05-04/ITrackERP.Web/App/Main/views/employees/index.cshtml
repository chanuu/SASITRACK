<div ng-controller="app.views.employees.index as vm">

    <div class="row">
        <div class="col-md-12 ">

            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Employees
                </div>

                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">

                        <button ng-click="vm.employeeCreationModal()" angular-ripple class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewEmployee")</button>
                    </div>


                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th># </th>
                                <th>@L("Full Name") </th>
                                <th>@L("Nic No")</th>
                                <th>@L("EPF No")</th>
                                <th>@L("Date Of Birth")</th>
                                <th>@L("Gender")</th>
                                <th>@L("Department")</th>
                                <th>@L("Designation")</th>
                                <th>@L("Job Status")</th>
                                <th>@L("Mobile No")</th>
                                <th>@L("Action ")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-animate="'animate'" dir-paginate="employee in vm.employees|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                <td>{{employee.fullName}}</td>
                                <td>{{employee.nicNo}}</td>
                                <td>{{employee.epfNo}}</td>
                                <td>{{employee.dateOfBirth | date:'yyyy/MM/dd'}}</td>
                                <td>{{employee.gender}}</td>
                                <td>{{employee.department}}</td>
                                <td>{{employee.designation}}</td>
                                <td>{{employee.jobStatus}}</td>
                                <td>{{employee.mobileNo}}</td>

                                <td>
                                    <a ng-href="#/employees/{{employee.id}}"><i class="fa fa-search text-green"></i></a>
                                    <a ng-href="#/employees/update/{{employee.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                    <a ng-click="vm.delete(employee)"><i class="fa fa-close text-red small-icons"></i></a>

                                </td>


                            </tr>
                        </tbody>
                        <dir-pagination-controls max-size="5"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>