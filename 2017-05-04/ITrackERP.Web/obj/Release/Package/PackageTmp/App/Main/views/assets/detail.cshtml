<div id="AssetDetail" ng-controller="app.views.assets.detail as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Assets
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">
            <div class="event-actions">
                <a class="btn btn-primary btn-sm btn-blue" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to assets</a>

            </div>
            <hr />



            <h3 class="block">{{vm.asset.assetNo}} Details</h3>


            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Asset No</label>
                        <div class="controls">
                            <div class="">{{vm.asset.assetNo}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Asset Name </label>
                        <div class="controls">
                            <div class="">{{vm.asset.assetName}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Asset Type </label>
                        <div class="controls">
                            <div class="">{{vm.asset.assetType}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Alternet Asset </label>
                        <div class="controls">
                            <div class="">{{vm.asset.alternetAsset}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Asset Status  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.assetStatus}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Warranty Period </label>
                        <div class="controls">
                            <div class="">{{vm.asset.warrantyPeriod}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Purchase Location </label>
                        <div class="controls">
                            <div class="">{{vm.asset.purchaseLocation}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Location </label>
                        <div class="controls">
                            <div class="">{{vm.asset.location}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>


                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Asset Used By </label>
                        <div class="controls">
                            <div class="">{{vm.asset.assetUsedBy}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Category 01  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.category01}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                <div class="row margin">
               
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Category 02  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.category02}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Category 03  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.category03}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>


                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Category 04  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.category04}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Category 05  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.category05}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>


                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">CustomField 1  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.customField1}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">CustomField 2  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.customField2}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>


                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">CustomField 3  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.customField3}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">CustomField 4  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.customField4}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>


                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">CustomField 5  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.customField5}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">CustomField 6  </label>
                        <div class="controls">
                            <div class="">{{vm.asset.customField6}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

               
                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Purchase Date </label>
                        <div class="controls">
                            <div type="text" class="">{{vm.asset.purchaseDate  | date:'yyyy/MM/dd'}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Purchase Price</label>
                        <div class="controls">
                            <div class="">{{vm.asset.purchasePrice}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>
        

                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Supplier Name</label>
                        <div class="controls">
                            <div class="">{{vm.asset.supplierName}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Depreciation Mode </label>
                        <div class="controls">
                            <div class="">{{vm.asset.depreciationMode}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Current Value </label>
                        <div class="controls">
                            <div class="">{{vm.asset.currentValue}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Description </label>
                        <div class="controls">
                            <div class="">{{vm.asset.description}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    
                </div>

            </div>
        </div>

    </div>
</div>