<div ng-controller="app.views.dashboard.maintenance.jobCardsForTotalCost as vm">

    <div class="row">
        <div class="col-md-12 ">

            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Job Card Headers
                </div>

                <div uib-collapse="isCollapsed" class="panel-body">

                    <div class="event-actions margin-adjust">
                        <a class="btn btn-primary btn-green" ng-href="#/dashboards/maintenance/" ng-click=""><i class="fa fa-arrow-circle-left"></i> Dashboard </a>
                        <a class="btn btn-primary btn-blue" ng-href="#/dashboards/maintenance/totalcost"><i class="fa fa-arrow-circle-left"></i> Back</a>
                    </div>


                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <br>
                    <br>
                    <br>
                    <br>

                    <table class="table  table-hover">
                        <thead>
                            <tr>
                                <th># </th>
                                <th>@L("Job Card No") </th>
                                <th>@L("Date")</th>
                                <th>@L("Asset No")</th>
                                <th>@L("Description")</th>
                               
                                <th>@L("Done By")</th>
                                <th>@L("Checked By")</th>
                                <th>@L("Status")</th>
                                <th>@L("Remark")</th>
                                <th><span class="pull-right">@L("Total Cost")</span></th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-animate="'animate'" dir-paginate="jobcardHeader in vm.jobCardHeader|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                <td>{{jobcardHeader.jobcardNo}}</td>
                                <td>{{jobcardHeader.date | date:'yyyy/MM/dd'}}</td>
                                <td>{{jobcardHeader.assetNo}}</td>
                                <td>{{jobcardHeader.description}}</td>
                               
                                <td>{{jobcardHeader.doneBy}}</td>
                                <td>{{jobcardHeader.checkedBy}}</td>
                                <td>{{jobcardHeader.status}}</td>
                                <td>{{jobcardHeader.remark}}</td>
                                <td><span class="pull-right">{{jobcardHeader.totalCost}}</span></td>
                                <td>
                                    <a ng-href="#/dashboards/maintenance/totalcost/{{jobcardHeader.id}}"><i class="fa fa-search text-green"></i></a>
                                </td>


                            </tr>
                            <tr>
                                <td colspan="9">: </td>
                                <td><span class="pull-right">Total Cost: {{vm.cost}}</span></td>
                           </tr>
                        </tbody>
                        <dir-pagination-controls max-size="15"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>
                    </table>
                    
                    

                </div>
            </div>
        </div>
    </div>
</div>