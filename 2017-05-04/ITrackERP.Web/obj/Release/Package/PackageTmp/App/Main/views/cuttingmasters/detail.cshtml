<div id="CuttingRatios" ng-controller="app.views.cuttingmasters.detail as vm">

   
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Cutting Ratio Details
        </div>
        <div uib-collapse="isCollapsed" class="panel-body">

            <div class="event-actions">
                <a class="btn btn-sm btn-primary" ng-href="#/cuttingmasters" angular-ripple><i class="fa fa-arrow-circle-left"></i> back to Cutting Master</a>

                <a ng-show="vm.cuttingMaster.isCuttingStarted== true && vm.cuttingMaster.isCuttingFinised==false" ng-click="vm.finalized()" class="btn btn-primary  btn-green "><i class="fa fa-check-circle"></i> @L("Finalized Style")</a>

            </div>

            
            

            <div class="panel-heading margin">
                <h3 class="block">{{vm.cuttingMaster.cuttingMasterNo}} Details </h3>
            </div>

            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Cutting Master No</label>
                        <div class="controls">

                            <div> {{vm.cuttingMaster.cuttingMasterNo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">StyleNo</label>
                        <div class="controls">

                            <div> {{vm.cuttingMaster.style}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Item Type</label>
                        <div class="controls">

                            <div> N/A </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Remark</label>
                        <div class="controls">

                            <div>{{vm.cuttingMaster.remark}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Status</label>
                        <div class="controls">

                            <div> {{vm.cuttingMaster.status}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>


                </div>
              


            </div>


        <div >
            <div  class="row margin-adjust">

                <a ng-href="#/cuttingmasters/item/create" ng-click="" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("Create")</a>

               
            </div>
            <div class="row margin-adjust" ng-show="vm.cuttingMaster.cuttingItems.length >0">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover" ng-show="vm.cuttingMaster.cuttingItems.length >0">
                <thead>
                    <tr>
                        <th># </th>
                        <th ng-click="sort('workorderno')">@L("Date") </th>
                        <th ng-click="sort('workorderno')">@L("CutNo") </th>
                        <th>@L("PoNo")</th>
                        <th>@L("LayerNo")</th>
                        <th>@L("FabricType")</th>
                        <th>@L("Color")</th>
                        <th>@L("Size")</th>
                        <th>@L("Length")</th>
                        <th>@L("LotNo")</th>
                        <th>@L("NoOfItem")</th>
                        <th>@L("Actions")</th>



                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="item in vm.cuttingMaster.cuttingItems|orderBy:sortkey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{item.date  | date:'yyyy/MM/dd'}}</td>
                        <td>{{item.cutNo}}</td>
                        <td>{{item.poNo}}</td>
                        <td>{{item.layerNo}}</td>
                        <td>{{item.fabricType}}</td>
                        <td>{{item.color}}</td>
                        <td>{{item.size}}</td>
                        <td>{{item.length}}</td>
                        <td>{{item.lotNo}}</td>
                        <td>{{item.noOfItem}}</td>




                        <td><a ng-href="#/workorders/{{workorder.id}}"><i class="fa fa-search text-green"></i></a></td>

                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>

        </div>





        </div>
    </div>

</div>

