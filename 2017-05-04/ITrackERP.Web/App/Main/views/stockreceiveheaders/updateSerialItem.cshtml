<div id="UpdateSerialItems" ng-controller="app.views.stockreceiveheaders.updateSerialItem as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Serial Items
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>


            <div class="panel-body">
                <form name="serialItemUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Serial No</label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.serialitem.serialNo" name="serialNo" ng-messages="serialItemUpdateForm.serialNo.$error" required />

                                <div ng-messages="serialItemUpdateForm.serialNo.$error" ng-if="serialItemUpdateForm.serialNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                      
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Status</label>

                            <div class="controls">
                                <select class="form-control" name="type" ng-model="vm.serialitem.status" required>
                                    <option value="Available">Available</option>
                                    <option value="Used">Used</option>
                                </select>
                                <span class="help-inline"></span>
                            </div>

                        </div>


                    </div>

                   
                </form>



                <hr />
                <div class="event-actions">
                    <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                    <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to receive note item</a>

                </div>




            </div>
        </div>

    </div>
</div>