
<div id="buyerProfile">
    <route-loading-indicator></route-loading-indicator>
    <form name="buyerCreateForm" role="form" novalidate class="form-validation">

        <div class=" margin">
            <h3 class="block">{{vm.buyer.buyerName}} Details </h3>
        </div>

        <div class="panel-body">
            <div class="row margin">

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Buyer Name</label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.buyerProfile.buyerName" name="buyerName" ng-messages="buyerCreateForm.buyerName.$error" required />

                        <div ng-messages="buyerCreateForm.buyerName.$error" ng-if="buyerCreateForm.buyerName.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Tele No</label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.buyerProfile.teleNo" />
                        <span class="help-inline"></span>

                    </div>
                </div>
            </div>



            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Address</label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.buyerProfile.address" />
                        <span class="help-inline"></span>

                    </div>
                </div>

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Email</label>

                    <div class="controls">
                        <input type="email" class="form-control" ng-model="vm.buyerProfile.email" name="email" ng-messages="buyerCreateForm.email.$error" />

                        <div ng-messages="buyerCreateForm.email.$error" ng-if="buyerCreateForm.email.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>
            </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Remark</label>

                        <div class="controls">

                            <input type="text" class="form-control" ng-model="vm.buyerProfile.remark" name="remark" ng-maxlength="100" ng-messages="buyerCreateForm.remark.$error" />

                            <div ng-messages="buyerCreateForm.remark.$error" ng-if="buyerCreateForm.remark.$touched">

                                <div ng-messages-include="/App/Main/views/messages.html"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />

                <div class="event-actions">



                    <a class="btn btn-sm btn-green" ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                    <a class="btn btn-sm btn-blue" ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

                </div>


            </div>

    </form>

</div>