<div id="MachineRequirementDetail" ng-controller="app.views.machinerequirements.detail as vm">


    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Machine Requirements
        </div>
        <div uib-collapse="isCollapsed" class="panel-body">

            <div class="event-actions">
                <a class="btn btn-sm btn-primary" ng-href="#/machinerequirements" angular-ripple><i class="fa fa-arrow-circle-left"></i> back to MachineRequirement</a>

            </div>



            <div class="panel-heading margin">
                <h3 class="block">{{vm.machinerequirement.styleNo}} Details details</h3>
            </div>

            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Style No</label>
                        <div class="controls">

                            <div> {{vm.machinerequirement.styleNo }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Line No </label>
                        <div class="controls">

                            <div> {{vm.machinerequirement.lineNo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">From Date</label>
                        <div class="controls">

                            <div> {{vm.machinerequirement.fromDate | date:'yyyy-MM-dd '}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">To Date </label>
                        <div class="controls">

                            <div>{{vm.machinerequirement.toDate | date:'yyyy-MM-dd ' }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Remark</label>
                        <div class="controls">

                            <div> {{vm.machinerequirement.remark}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Location Code </label>
                        <div class="controls">

                            <div>{{vm.machinerequirement.locationCode }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>


            </div>



            <div class="row margin-adjust">

                <button ng-click="vm.machinerequirementItemCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("Create")</button>
            </div>
            <div class="row margin-adjust">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th># </th>
                        <th>@L("MachineType")</th>
                        <th>@L("Nos")</th>
                        <th>@L("Remark")</th>
                        <th>@L("Action")</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="machinerequirement in vm.machinerequirement.machineRequirementItems|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{machinerequirement.machineType}}</td>
                        <td>{{machinerequirement.nos}}</td>
                        <td>{{machinerequirement.remark}}</td>


                        <td>
                           
                            <a ng-href="#/machinerequirements/item/update/{{machinerequirement.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                            <a ng-click="vm.delete(machinerequirement)"><i class="fa fa-close text-red small-icons"></i></a>
                        </td>

                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>







        </div>
    </div>



