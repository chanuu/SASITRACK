<div id="BuyerDetail" ng-controller="app.views.buyers.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Buyers
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.buyer.buyerName }} Details</h3>


            <div class="panel-body">
                <form name="buyerUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Buyer Name</label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.buyer.buyerName" name="buyerName" ng-messages="buyerUpdateForm.buyerName.$error" required />

                                <div ng-messages="buyerUpdateForm.buyerName.$error" ng-if="buyerUpdateForm.buyerName.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>

                        </div>


                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Tele No</label>
                            <div class="controls">
                                <input type="text" ng-model="vm.buyer.teleNo" class="form-control">
                                <span class="help-inline"></span>
                            </div>
                        </div>

                    </div>


                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Address</label>
                            <div class="controls">

                                <input type="text" ng-model="vm.buyer.address" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Email</label>
                           
                            <div class="controls">
                                <input type="email" class="form-control" ng-model="vm.buyer.email" name="email" ng-messages="buyerUpdateForm.email.$error"/>

                                <div ng-messages="buyerUpdateForm.email.$error" ng-if="buyerUpdateForm.email.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Remark</label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.buyer.remark" name="remark" ng-maxlength="100" ng-messages="buyerUpdateForm.remark.$error" />

                                <div ng-messages="buyerUpdateForm.remark.$error" ng-if="buyerUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>



                    </div>


                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to buyers</a>

                    </div>



</form>
</div>
        </div>

    </div>
</div>