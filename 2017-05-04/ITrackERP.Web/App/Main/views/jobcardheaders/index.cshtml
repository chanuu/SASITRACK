<div ng-controller="app.views.jobcardheaders.index as vm">

    <div class="row">
        <div class="col-md-12 ">

            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Job Card Headers
                </div>

                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">

                        <button ng-click="vm.jobCardheaderCreationModal()" angular-ripple class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewJobCardHeader")</button>
                    </div>


                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th># </th>
                                <th>@L("Job Card No") </th>
                                <th>@L("Date")</th>
                                <th>@L("Asset No")</th>
                                <th>@L("Description")</th>
                                <th>@L("Total Cost")</th>
                                <th>@L("Done By")</th>
                                <th>@L("Checked By")</th>
                                <th>@L("Status")</th>
                                <th>@L("Remark")</th>
                                <th>@L("Action ")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-animate="'animate'" dir-paginate="jobcardHeader in vm.jobCardHeaders|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                <td>{{jobcardHeader.jobcardNo}}</td>
                                <td>{{jobcardHeader.date | date:'yyyy/MM/dd'}}</td>
                                <td>{{jobcardHeader.assetNo}}</td>
                                <td>{{jobcardHeader.description}}</td>
                                <td>{{jobcardHeader.totalCost}}</td>
                                <td>{{jobcardHeader.doneBy}}</td>
                                <td>{{jobcardHeader.checkedBy}}</td>
                                <td>{{jobcardHeader.status}}</td>
                                <td>{{jobcardHeader.remark}}</td>

                                <td>
                                    <a ng-href="#/jobcardheaders/{{jobcardHeader.id}}"><i class="fa fa-search text-green"></i></a>
                                    <a ng-show="jobcardHeader.status == 'Pending'" ng-href="#/jobcardheaders/update/{{jobcardHeader.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                    <a ng-show="jobcardHeader.status == 'Pending'" ng-click="vm.delete(jobcardHeader)"><i class="fa fa-close text-red small-icons"></i></a>

                                </td>


                            </tr>
                        </tbody>
                        <dir-pagination-controls max-size="5"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>