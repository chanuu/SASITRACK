<div id="UpdateCustomFieldSetup" ng-controller="app.views.customfieldsetups.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Custom Field Setup
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.customfieldsetup.customFieldNo}} Update</h3>


            <div class="panel-body">
                <form name="customfieldsetupUpdateForm" role="form" novalidate class="form-validation">
                  
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Custom Field No </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.customfieldsetup.customFieldNo" name="customFieldNo" ng-messages="customfieldsetupUpdateForm.customFieldNo.$error" required />

                                <div ng-messages="customfieldsetupUpdateForm.customFieldNo.$error" ng-if="customfieldsetupUpdateForm.customFieldNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Item Type</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.customfieldsetup.itemType" name="itemType" ng-messages="customfieldsetupUpdateForm.itemType.$error" required />

                                <div ng-messages="customfieldsetupUpdateForm.itemType.$error" ng-if="customfieldsetupUpdateForm.itemType.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Custom Field 1 </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.customfieldsetup.customeField1" />
                                <span class="help-inline"></span>

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Custom Field 2 </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.customfieldsetup.customeField2" />
                                <span class="help-inline"></span>

                            </div>
                        </div>

                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Custom Field 3 </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.customfieldsetup.customeField3" />
                                <span class="help-inline"></span>

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Custom Field 4 </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.customfieldsetup.customeField4" />
                                <span class="help-inline"></span>

                            </div>
                        </div>

                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Custom Field 5 </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.customfieldsetup.customeField5" />
                                <span class="help-inline"></span>

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Custom Field 6 </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.customfieldsetup.customeField6" />
                                <span class="help-inline"></span>

                            </div>
                        </div>

                    </div>


                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Code Length  </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.customfieldsetup.codeLength" name="codeLength" ng-messages="customfieldsetupUpdateForm.codeLength.$error"/>

                                <div ng-messages="customfieldsetupUpdateForm.codeLength.$error" ng-if="customfieldsetupUpdateForm.codeLength.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Item Code Generate</label>
                            <div class="controls">
                                <input type="checkbox" ng-checked="vm.customfieldsetup.itemCodeGenerate==true" ng-model="vm.customfieldsetup.itemCodeGenerate" ng-true-value='true' ng-false-value='false' />
                                <span class="help-inline"></span>

                            </div>
                        </div>

                    </div>

                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to custom field set up</a>

                    </div>



                </form>
            </div>
        </div>

    </div>
</div>