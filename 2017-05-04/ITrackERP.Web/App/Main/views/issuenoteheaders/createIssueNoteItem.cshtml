
<div id="createIssueNoteItem">

    <form name="issuenoteItemCreateForm" role="form" novalidate class="form-validation">

        <div class=" margin">
            <h3 class="block">{{issuenoteitem.cutNo  }} Details</h3>
        </div>

        <div class="panel-body">
           
            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Cut No </label>

                    <div class="controls">

                        <input type="text" class="form-control" ng-model="issuenoteitem.cutNo" name="cutNo" ng-messages="issuenoteItemCreateForm.cutNo.$error" required/>

                        <div ng-messages="issuenoteItemCreateForm.cutNo.$error" ng-if="issuenoteItemCreateForm.cutNo.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Color </label>

                    <div class="controls">

                        <input type="text" class="form-control" ng-model="issuenoteitem.color" name="color" ng-messages="issuenoteItemCreateForm.color.$error"/>
                      
                    </div>
                </div>

            </div>

            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Size </label>

                    <div class="controls">

                        <input type="text" class="form-control" ng-model="issuenoteitem.size" name="size" ng-messages="issuenoteItemCreateForm.size.$error" />

                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">No of Plys </label>

                    <div class="controls">

                        <input type="text" class="form-control" ng-model="issuenoteitem.noOfPlys" name="noOfPlys" ng-messages="issuenoteItemCreateForm.noOfPlys.$error" />

                    </div>
                </div>

            </div>

            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">No of Item </label>

                    <div class="controls">

                        <input type="text" class="form-control" ng-model="issuenoteitem.noOfItem" name="noOfItem" ng-messages="issuenoteItemCreateForm.noOfItem.$error" />

                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">PO No</label>

                    <div class="controls">

                        <input type="text" class="form-control" ng-model="issuenoteitem.poNo" name="poNo" ng-messages="issuenoteItemCreateForm.poNo.$error" />

                    </div>
                </div>

            </div>
            <hr />

            <div class="event-actions">



                <a class="btn btn-sm btn-green" angular-ripple ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                <a class="btn btn-sm btn-blue" angular-ripple ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

            </div>


        </div>

    </form>


</div>