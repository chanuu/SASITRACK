
<div id="createJobCardItem">

    <form name="jobcardItemCreateForm" role="form" novalidate class="form-validation">




        <div class=" margin">
            <h3 class="block">{{vm.jobcarditem.itemCode  }} Details details</h3>
        </div>

        <div class="panel-body">
            <div class="row margin">
                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Item Code</label>
                    <div class="controls">
                        <input type="text" typeahead-on-select="setItemNo($item)" ng-model="selectedItemCode" name="itemCode" ng-change="getSerialItems(selectedItemCode)" uib-typeahead="itemmaster as itemmaster.itemNo for itemmaster in vm.itemmasters | filter:$viewValue | limitTo:8" class="form-control" required>
                        <span class="help-inline"></span>
                    </div>
                </div>

               
                <div ng-show="selectedItemCode.serialItem == true" class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Serial No</label>
                    <div class="controls">

                        <input name="serialNo" ng-change="vm.getSerialItems()" type="text" typeahead-on-select="setSerialNo($item)" ng-model="selectedSerialNo" uib-typeahead="serialitem as serialitem.serialNo for serialitem in vm.serialitems | filter:$viewValue | limitTo:8" class="form-control">
                        <span class="help-inline"></span>
                    </div>
                </div>
            </div>


            <div ng-show="selectedItemCode.serialItem == false" class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Amount </label>

                    <div class="controls">

                        <input type="text" class="form-control" ng-model="jobcarditem.amount" name="amount" ng-messages="jobcardItemCreateForm.amount.$error" />

                        <div ng-messages="jobcardItemCreateForm.amount.$error" ng-if="jobcardItemCreateForm.amount.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>
            </div>

            <hr />

            <div class="event-actions">



                <a class="btn btn-sm btn-green" angular-ripple ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                <a class="btn btn-sm btn-blue" angular-ripple ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

            </div>


        </div>

    </form>


</div>