<div id="UpdateAssetTransferHeader" ng-controller="app.views.assettransfers.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Asset Transfer Headers
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">

            <h3 class="block">Update</h3>

            <div class="panel-body">
                <form name="assetTransferHeaderUpdateForm" role="form" novalidate class="form-validation">

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Transfer Note No </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assettransfer.transferNoteNo" name="transferNoteNo" readonly />
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Requisition No  </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assettransfer.requisitionNo" name="requisitionNo" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Date </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assettransfer.date" name="date" readonly />
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">From Location </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assettransfer.fromLocation" name="fromLocation" readonly />
                            </div>
                        </div>
                    </div>

            <div class="row margin">

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">To Location </label>

                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.assettransfer.toLocation" name="toLocation" readonly />
                    </div>
                </div>


                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Type</label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.assettransfer.type" name="type" readonly />
                    </div>
                </div>
            </div>

            <div class="row margin">

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Transfer By</label>

                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.assettransfer.transferBy" name="transferBy" readonly />
                    </div>
                </div>


                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Approved By</label>

                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.assettransfer.approvedBy" name="approvedBy" readonly/>

                    </div>
                </div>
            </div>

            <div class="row margin">

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Remark</label>

                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.assettransfer.remark" name="remark" ng-maxlength="100" ng-messages="assetTransferHeaderUpdateForm.remark.$error" />

                        <div ng-messages="assetTransferHeaderUpdateForm.remark.$error" ng-if="assetTransferHeaderUpdateForm.remark.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Status</label>

                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.assettransfer.status" name="status" readonly/>                       
                    </div>
                </div>
            </div>



            <hr />
            <div class="event-actions">
                <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to asset transfer header</a>

            </div>
                    </form>
        </div>
    </div>
</div>
