<div id="UpdateJobCardHeader" ng-controller="app.views.jobcardheaders.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Job Card Header
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.jobCardHeader.jobcardNo}} Update</h3>


            <div class="panel-body">
                <form name="jobcardheaderUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Job Card No </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.jobCardHeader.jobcardNo" name="jobcardNo" ng-messages="jobcardheaderUpdateForm.jobcardNo.$error" required />

                                <div ng-messages="jobcardheaderUpdateForm.jobcardNo.$error" ng-if="jobcardheaderUpdateForm.jobcardNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Date </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.jobCardHeader.date" name="date" ng-messages="jobcardheaderUpdateForm.date.$error" required />

                                <div ng-messages="jobcardheaderUpdateForm.date.$error" ng-if="jobcardheaderUpdateForm.date.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Asset No</label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="setAssetNo($item)" ng-model="selectedAssetNo" uib-typeahead="asset as asset.assetNo for asset in vm.assets | filter:$viewValue | limitTo:8" class="form-control">
                                <span class="help-inline"></span>
                            </div>

                        </div>
                     
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Description </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.jobCardHeader.description" name="description" ng-maxlength="100" ng-messages="jobcardheaderUpdateForm.description.$error" />

                                <div ng-messages="jobcardheaderUpdateForm.description.$error" ng-if="jobcardheaderUpdateForm.description.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Total Cost  </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.jobCardHeader.totalCost" name="totalCost" readonly/>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Done By</label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="setDoneBy($item)" ng-model="selectedEmployeeFullName" uib-typeahead="employee as employee.fullName for employee in vm.employees | filter:$viewValue | limitTo:8" class="form-control">
                                <span class="help-inline"></span>
                            </div>

                        </div>

                    </div>


                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Checked By  </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.jobCardHeader.checkedBy" name="checkedBy" ng-messages="jobcardheaderUpdateForm.checkedBy.$error" required />

                                <div ng-messages="jobcardheaderUpdateForm.checkedBy.$error" ng-if="jobcardheaderUpdateForm.checkedBy.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Remark </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.jobCardHeader.remark" name="remark" ng-maxlength="100" ng-messages="jobcardheaderUpdateForm.remark.$error" />

                                <div ng-messages="jobcardheaderUpdateForm.remark.$error" ng-if="jobcardheaderUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>


                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to job card header</a>

                    </div>



                </form>
            </div>
        </div>

    </div>
</div>