<div ng-controller="app.views.dividingplans.index as vm">

    <div class="row">
        <div class="col-md-12 ">

            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Dividing Plan Headers
                </div>

                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">

                        <button ng-click="vm.dividingplanCreationModal()" angular-ripple class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewDividingPlanHeader")</button>
                    </div>


                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th># </th>
                                <th>@L("StyleNo") </th>
                                <th>@L("LineNo")</th>
                                <th>@L("TotalEmployee")</th>
                                <th>@L("Target")</th>
                                <th>@L("ProductionPerHour")</th>
                                <th>@L("Remark")</th>
                                <th>@L("Action ")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-animate="'animate'" dir-paginate="dividingplan in vm.dividingplans|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                <td>{{dividingplan.styleId}}</td>
                                <td>{{dividingplan.lineNo}}</td>
                                <td>{{dividingplan.totalEmployee}}</td>
                                <td>{{dividingplan.target}}</td>
                                <td>{{dividingplan.productionPerHour}}</td>
                                <td>{{dividingplan.remark}}</td>

                                <td>
                                    <a ng-href="#/dividingplans/{{dividingplan.id}}"><i class="fa fa-search text-green"></i></a>
                                    <a ng-href="#/dividingplans/update/{{dividingplan.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                    <a ng-click="vm.delete(dividingplan)"><i class="fa fa-close text-red small-icons"></i></a>
                                </td>


                            </tr>
                        </tbody>
                        <dir-pagination-controls max-size="5"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>