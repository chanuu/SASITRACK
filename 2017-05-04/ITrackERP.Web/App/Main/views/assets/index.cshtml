<div ng-controller="app.views.assets.index as vm">
    <route-loading-indicator></route-loading-indicator>


    <div class="row">
        <div class="col-lg-12">


            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Assets
                </div>
                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">
                        <div class="input-group pull-right">
                            <button ng-click="vm.assetCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewAsset")</button>

                        </div>
                    </div>
                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <table id="example2" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th> </th>


                                <th>@L("Asset No") </th>
                                <th>@L("Asset Name")</th>
                               
                                <th>@L("Alternet Asset")</th>
                                <th>@L("Asset Status")</th>
                            
                                <th>@L("Purchase Location")</th>
                                <th>@L("Location")</th>
                                <th>@L("Asset Used By")</th>
                             
                         
                                <th>@L("Actions")</th>


                            </tr>
                        </thead>
                        <tbody>

                            <tr ng-animate="'animate'" dir-paginate="asset in vm.assets|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">

                                <td><input type="checkbox" ng-model="tr" checked class="i-checks" name="input[]"></td>

                                <td>{{asset.assetNo}}</td>
                                <td>{{asset.assetName}}</td>
                               
                                <td>{{asset.alternetAsset}}</td>
                                <td>{{asset.assetStatus}}</td>
                        
                                <td>{{asset.purchaseLocation}}</td>
                                <td>{{asset.location}}</td>
                                <td>{{asset.assetUsedBy}}</td>
                     
                                <td>
                                    <a ng-href="#/assets/{{asset.id}}"><i class="fa fa-search text-blue small-icons"></i></a>
                                    <a ng-href="#/assets/update/{{asset.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                    <a ng-click="vm.delete(asset)"><i class="fa fa-close text-red small-icons"></i></a>
                                </td>

                            </tr>

                        </tbody>
                    </table>
                    <dir-pagination-controls max-size="5"
                                             direction-links="true"
                                             boundary-links="true">
                    </dir-pagination-controls>

                </div>
            </div>
        </div>



    </div>





</div>










