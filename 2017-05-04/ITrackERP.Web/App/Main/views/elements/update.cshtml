<div id="ElementDetail" ng-controller="app.views.elements.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Elements
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.element.name}} Details</h3>


            <div class="panel-body">

                <form name="elementUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Name  </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.element.name" name="name" ng-messages="elementUpdateForm.name.$error" required />

                                <div ng-messages="elementUpdateForm.name.$error" ng-if="elementUpdateForm.name.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Length </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.element.length" name="length" ng-messages="elementUpdateForm.length.$error" required />

                                <div ng-messages="elementUpdateForm.length.$error" ng-if="elementUpdateForm.length.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Width </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.element.width" name="width" ng-messages="elementUpdateForm.width.$error" required />

                                <div ng-messages="elementUpdateForm.width.$error" ng-if="elementUpdateForm.width.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Category </label>
                            <div class="controls">
                                <select class="form-control" name="type" ng-model="vm.element.category" required>
                                    <option value="Category 1">Category 1</option>
                                    <option value="Category 2">Category 2</option>
                                    <option value="Category 3">Category 3</option>
                                    <option value="Category 4">Category 4</option>
                                    <option value="Category 5">Category 5</option>
                                    <option value="Category 6">Category 6</option>
                                </select>
                                <span class="help-inline"></span>
                            </div>
                        </div>                          
                    </div>


                    <div class="row margin">
                        <div ng-show="vm.element.path != 'N/A'" class="row margin">
                            <div class="col-md-6 col-sm-12">
                                <label class="control-label">Image</label>
                                <div class="controls">
                                    <button class="close" aria-hidden="true" ng-click="vm.deleteElementImage(vm.element)">×</button>
                                    <img src="{{vm.element.path}}" class="thumb">
                                </div>
                            </div>
                        </div>

                        <div ng-show="vm.element.path == 'N/A'" class="row margin">
                            <div class="col-md-6 col-sm-12">
                                <br>Image:
                                <input type="file" name="file" ngf-select ng-model="file" ngf-pattern="'image/*'" ngf-accept="'image/*'">

                                <i ng-show="elementUpdateForm.file.$error.maxSize">
                                    File too large
                                    {{errorFile.size / 1000000|number:1}}MB: max 2M
                                </i>
                                <img ng-show="elementUpdateForm.file.$valid" ngf-thumbnail="file" class="thumb"> <button ng-click="file = null" ng-show="file">Remove</button>
                                <br>

                                <span class="progress" ng-show="file.progress >= 0">
                                    <div style="width:{{file.progress}}%" ng-bind="file.progress + '%'"></div>
                                </span>
                                <span ng-show="file.result">Upload Successful</span>
                                <span class="err" ng-show="errorMsg">{{errorMsg}}</span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to elements</a>

                    </div>


                </form>

            </div>
        </div>

    </div>
</div>