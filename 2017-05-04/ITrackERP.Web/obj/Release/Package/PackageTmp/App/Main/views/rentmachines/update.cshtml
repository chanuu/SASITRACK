<div id="RentMachineDetail" ng-controller="app.views.rentmachines.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Rent Machines 
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.rentmachine.machineSerialNo }} Details</h3>


            <div class="panel-body">
                <form name="rentmachineUpdateForm" role="form" novalidate class="form-validation">


                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Rent ID </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.rentmachine.rentManagementID" name="rentManagementID" ng-messages="rentmachineUpdateForm.rentManagementID.$error" required />

                                <div ng-messages="rentmachineUpdateForm.rentManagementID.$error" ng-if="rentmachineUpdateForm.rentManagementID.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Machine Type </label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="setMachineType($item)" ng-model="selectedMachineType" uib-typeahead="machinetype as machinetype.machineTypeName for machinetype in vm.machinetypes | filter:$viewValue | limitTo:8" class="form-control">
                                <span class="help-inline"></span>
                            </div>
                        </div>

                    </div>



                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Machine Serial No </label>
                            
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.rentmachine.machineSerialNo" name="machineSerialNo" ng-messages="rentmachineUpdateForm.machineSerialNo.$error" required />

                                <div ng-messages="rentmachineUpdateForm.machineSerialNo.$error" ng-if="rentmachineUpdateForm.machineSerialNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Rent Barcode </label>
                            
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.rentmachine.rentBarcode" name="rentBarcode" ng-messages="rentmachineUpdateForm.rentBarcode.$error" required />

                                <div ng-messages="rentmachineUpdateForm.rentBarcode.$error" ng-if="rentmachineUpdateForm.rentBarcode.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">From Date </label>
                            
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.rentmachine.fromDate" name="fromDate" ng-messages="rentmachineUpdateForm.fromDate.$error" required />

                                <div ng-messages="rentmachineUpdateForm.fromDate.$error" ng-if="rentmachineUpdateForm.fromDate.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">To Date </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.rentmachine.toDate" name="toDate" ng-messages="rentmachineUpdateForm.toDate.$error" required />

                                <div ng-messages="rentmachineUpdateForm.toDate.$error" ng-if="rentmachineUpdateForm.toDate.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Remark</label>
                            
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.rentmachine.remark" name="remark" ng-maxlength="100" ng-messages="rentmachineUpdateForm.remark.$error"/>

                                <div ng-messages="rentmachineUpdateForm.remark.$error" ng-if="rentmachineUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Status </label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.rentmachine.status" name="status" ng-messages="rentmachineUpdateForm.status.$error" required />

                                <div ng-messages="rentmachineUpdateForm.status.$error" ng-if="rentmachineUpdateForm.status.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to rent machines</a>

                    </div>


</form>

</div>
        </div>

    </div>
</div>