<div id="AssetVerificationHeaderDetail" ng-controller="app.views.assettransfers.detail as vm">


    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Asset Verification Header
        </div>
        <div uib-collapse="isCollapsed" class="panel-body">

            <div class="event-actions">
                <a class="btn btn-sm btn-primary" ng-href="#/assetverification" angular-ripple><i class="fa fa-arrow-circle-left"></i> Back</a>
                <a class="btn btn-sm btn-primary btn-green" ng-click="vm.update(vm.assetverificationheader)" ng-disabled="vm.assetverificationheader.approvedBy != 'None'" angular-ripple><i class="fa fa-arrow-circle-left"></i> Approve</a>
            </div>


            <div class="panel-heading margin">
                <h3 class="block">Details </h3>
            </div>
            
            <div class="panel-body">
                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Asset Verification No</label>
                        <div class="controls">

                            <div> {{vm.assetverificationheader.assetVerificationNo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Date</label>
                        <div class="controls">

                            <div> {{vm.assetverificationheader.date | date:'yyyy/MM/dd'}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>


                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Location Code </label>
                        <div class="controls">

                            <div> {{vm.assetverificationheader.locationCode }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Approved By</label>
                        <div class="controls">

                            <div> {{vm.assetverificationheader.approvedBy}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>
                <div class="row margin">
                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Approved At</label>
                        <div class="controls">

                            <div>{{vm.assetverificationheader.approvedAt | date:'yyyy/MM/dd HH:mm:ss' }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>

                             
            </div>

            <div class="row margin-adjust">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th># </th>
                        <th>@L("Barcode Id") </th>
                        <th>@L("Asset Id")</th>
                        <th>@L("Used By") </th>
                        <th>@L("Condition")</th>
                        <th>@L("Remark") </th>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="assetverificationdetail in vm.assetverificationheader.assetVerificationDetails|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{assetverificationdetail.barcodeId }}</td>
                        <td>{{assetverificationdetail.assetId }}</td>
                        <td>{{assetverificationdetail.usedBy }}</td>
                        <td>{{assetverificationdetail.condition }}</td>
                        <td>{{assetverificationdetail.remark }}</td>
                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>

        </div>
    </div>
</div>



