<div id="UpdateMachineRequirement" ng-controller="app.views.machinerequirements.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Machine Requirement
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.style.styleNo}} Update</h3>


            <div class="panel-body">
                <form name="machineRequirementUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Line No</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.machinerequirement.lineNo" name="lineNo" ng-messages="machineRequirementUpdateForm.lineNo.$error" required />

                                <div ng-messages="machineRequirementUpdateForm.lineNo.$error" ng-if="machineRequirementUpdateForm.lineNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Style No</label>
                            <div class="controls">
                                <input type="text" ng-model="selectedStyle" uib-typeahead="style as style.styleNo for style in vm.styles | filter:$viewValue | limitTo:8" class="form-control">


                                <span class="help-inline"></span>

                            </div>
                        </div>
                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">From Date </label>

                            <p class="input-group">
                                <input type="text" class="form-control" uib-datepicker-popup ng-model="fdate" is-open="dpOpenStatus2.fdate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />

                                <span class="input-group-btn">
                                    <button type="button"
                                            class="btn btn-default"
                                            ng-click="setDpOpenStatus2('fdate', $event)">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                            </p>


                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">To Date </label>

                            <p class="input-group">
                                <input type="text" class="form-control" uib-datepicker-popup ng-model="tdate" is-open="dpOpenStatus2.todate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />

                                <span class="input-group-btn">
                                    <button type="button"
                                            class="btn btn-default"
                                            ng-click="setDpOpenStatus2('todate', $event)">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                            </p>
                        </div>
                    </div>

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Remark</label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.machinerequirement.remark" name="remark" ng-maxlength="100" ng-messages="machineRequirementUpdateForm.remark.$error"/>

                                <div ng-messages="machineRequirementUpdateForm.remark.$error" ng-if="machineRequirementUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Location Code </label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.machinerequirement.locationCode" name="locationCode" ng-messages="machineRequirementUpdateForm.locationCode.$error" required />

                                <div ng-messages="machineRequirementUpdateForm.locationCode.$error" ng-if="machineRequirementUpdateForm.locationCode.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>



                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to machine requirement</a>

                    </div>



</form>
</div>
        </div>

    </div>
</div>