<div ng-controller="app.views.home as vm">
    <div class="row">
        <div class="col-lg-3 col-s-6">
            <a ng-href="#/styles">
                <div class="hpanel">

                    <div class="panel-body text-center h-200">
                        <i class="pe-7s-scissors fa-4x"></i>
                        <h3 class="m-xs">5</h3>
                        <h3 class="font-extra-bold no-margins text-success">
                            Styles
                        </h3>
                     
                    </div>

                </div>
            </a>
</div>
        <div class="col-lg-3 col-s-6">
            <a ng-href="#/buyers">
                <div class="hpanel">

                    <div class="panel-body text-center h-200">
                        <i class="pe-7s-users fa-4x"></i>
                        <h3 class="m-xs">8</h3>
                        <h3 class="font-extra-bold no-margins text-success">
                            Buyers
                        </h3>
                        
                    </div>

                </div>
            </a>
        </div>
        <div class="col-lg-3 col-s-6">
            <div class="hpanel">

                <div class="panel-body text-center h-200">
                    <i class="pe-7s-credit fa-4x"></i>
                    <h3 class="m-xs">15</h3>
                    <h3 class="font-extra-bold no-margins text-success">
                        Work Orders
                    </h3>
                   
                </div>

            </div>
        </div>
        <div class="col-lg-3 col-s-6">
            <div class="hpanel">

                <div class="panel-body text-center h-200">
                    <i class="pe-7s-global fa-4x"></i>
                    <h3 class="m-xs">3</h3>
                    <h3 class="font-extra-bold no-margins text-success">
                        Skill Inventory
                        <a ng-href="#/dashboards/"><i class="fa fa-edit text-green small-icons"></i></a>
                    </h3>
                    <small>3 locations connect to network.</small>
                </div>

            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-3 col-s-6">
            <a ng-href="#/styles">
                <div class="hpanel">

                    <div class="panel-body text-center h-200">
                        <i class="pe-7s-scissors fa-4x"></i>
                        <h3 class="m-xs">5</h3>
                        <h3 class="font-extra-bold no-margins text-success">
                           Asset
                        </h3>
                      
                    </div>

                </div>
            </a>
        </div>
        <div class="col-lg-3 col-s-6">
            <a ng-href="#/dashboards/cutting/">
                <div class="hpanel">

                    <div class="panel-body text-center h-200">
                        <i class="pe-7s-users fa-4x"></i>
                        <h3 class="m-xs">8</h3>
                        <h3 class="font-extra-bold no-margins text-success">
                            Cutting
                        </h3>
                      
                    </div>

                </div>
            </a>
        </div>
        <div class="col-lg-3 col-s-6">
            <a ng-href="#/dashboards/cutting/production">
                <div class="hpanel">

                    <div class="panel-body text-center h-200">
                        <i class="pe-7s-credit fa-4x"></i>
                        <h3 class="m-xs">15</h3>
                        <h3 class="font-extra-bold no-margins text-success">
                            Production
                        </h3>

                    </div>

                </div>
            </a>
</div>
        <div class="col-lg-3 col-s-6">
            <div class="hpanel">

                <div class="panel-body text-center h-200">
                    <i class="pe-7s-global fa-4x"></i>
                    <h3 class="m-xs">3</h3>
                    <h3 class="font-extra-bold no-margins text-success">
                        Finishing
                        <a ng-href="#/dashboards/"><i class="fa fa-edit text-green small-icons"></i></a>
                    </h3>
                  
                </div>

            </div>
        </div>

    </div>





    <div class="row">
      <div class="hpanel">
          <div class="panel-heading">
              <div class="panel-tools">
                  <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                  <a class="closebox"><i class="fa fa-times"></i></a>
              </div>
              Production Summary
          </div>
          <div class="panel-body">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            Production Summary
                            <small>{{date | date:'yyyy-MM-dd'}}</small>
                        </h5>
                        <div ibox-tools></div>
                    </div>
                    <div class="ibox-content">
                        <div>
                            <am-chart class="chart-m" id="myFirstChart" options="amChartOptions" height="100%" width="100%"></am-chart>
                        </div>
                    </div>
                </div>
            </div>
         
          </div>
    </div>
   </div>
</div>