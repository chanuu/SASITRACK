
<div id="buyerProfile">
    <route-loading-indicator></route-loading-indicator>
    <form name="buyerCreateForm" role="form" novalidate class="form-validation">




        <div class=" margin">
            <h3 class="block">{{vm.buyer.buyerName}} Details </h3>
        </div>

        <div class="panel-body">
            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Buyer Name</label>
                    <div class="controls">
                        <input type="text" class="span6 m-wrap" ng-model="vm.buyerProfile.buyerName" required />



                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Tele No</label>
                    <div class="controls">
                        <input type="text" class="span6 m-wrap" ng-model="vm.buyerProfile.teleNo" required />
                        <span class="help-inline"></span>

                    </div>
                </div>
            </div>



            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Address</label>
                    <div class="controls">
                        <input type="text" class="span6 m-wrap" ng-model="vm.buyerProfile.address" />
                        <span class="help-inline"></span>

                    </div>
                </div>

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Email</label>
                    <div class="controls">
                        <input type="text" class="span6 m-wrap" ng-model="vm.buyerProfile.email" required />
                        <span class="help-inline"></span>

                    </div>
                </div>

            </div>

         

            

            <div class="row margin">

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Remark</label>
                    <div class="controls">
                        <textarea name="Text1" rows="5" ng-model="vm.buyerProfile.remark"> </textarea>

                        <span class="help-inline"></span>

                    </div>
                </div>
            </div>
            <hr />

            <div class="event-actions">



                <a class="btn btn-sm btn-green" ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                <a class="btn btn-sm btn-blue" ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

            </div>


        </div>

    </form>


</div>