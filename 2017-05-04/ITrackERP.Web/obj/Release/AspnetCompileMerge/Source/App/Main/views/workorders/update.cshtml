<div id="UpdateWorkOrder" ng-controller="app.views.workorders.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Style Master
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.style.styleNo}} Update</h3>

           
            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">WorkOrder No</label>
                        <div class="controls">


                            <input type="text" ng-model="vm.workOrder.workOrderNo" class="form-control">

                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Style No</label>
                        <div class="controls">

                            <input type="text" typeahead-on-select="setStyle($item)" ng-model="selectedStyle" uib-typeahead="style as style.styleNo for style in vm.styles | filter:$viewValue | limitTo:8" class="form-control">
 <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Boc No</label>
                        <div class="controls">

                            <input type="text" class="form-control" ng-model="vm.workOrder.endDate" />
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Season</label>
                        <div class="controls">

                            <input type="text" class="form-control" ng-model="vm.workOrder.status" required />
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Item Type</label>
                        <div class="controls">

                            <input type="text" class="form-control" ng-model="vm.workOrder.priority" required />
                            <span class="help-inline"></span>
                           
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Department</label>
                        <div class="controls">


                            <input type="text" class="form-control" ng-model="vm.workOrder.startDate | date:'yyyy/MM/dd'" required />

                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>
                <div class="row margin">

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Remark</label>
                        <div class="controls">

                            <input type="text" class="form-control" ng-model="vm.workOrder.endDate | date:'yyyy/MM/dd'" />

                            <span class="help-inline"></span>

                        </div>
                    </div>
                    
                </div>

                

                <hr />
                <div class="event-actions">
                    <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                    <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to style</a>

                </div>




            </div>
        </div>

    </div>
</div>