<div ng-controller="app.views.customfieldsetups.index as vm">
    <route-loading-indicator></route-loading-indicator>


    <div class="row">
        <div class="col-lg-12">

            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Custom Field Setups
                </div>
                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">
                        <div class="input-group pull-right">
                            <button ng-click="vm.customfieldsetupCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewCustomFieldSetup")</button>

                        </div>
                    </div>
                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <table id="example2" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th> </th>


                                <th>@L("Custom Field No") </th>
                                <th>@L("Item Type")</th>
                                <th>@L("Custom Field 1")</th>
                                <th>@L("Custom Field 2")</th>
                                <th>@L("Custom Field 3")</th>
                                <th>@L("Custom Field 4")</th>
                                <th>@L("Custom Field 5")</th>
                                <th>@L("Custom Field 6")</th>
                                <th>@L("Code Length")</th>
                                <th>@L("Item Code Generate")</th>
                                <th>@L("Action")</th>


                            </tr>
                        </thead>
                        <tbody>

                            <tr ng-animate="'animate'" dir-paginate="customfieldsetup in vm.customfieldsetups|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">

                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>

                                <td>{{customfieldsetup.customFieldNo}}</td>
                                <td>{{customfieldsetup.itemType}}</td>
                                <td>{{customfieldsetup.customeField1 }}</td>
                                <td>{{customfieldsetup.customeField2}}</td>
                                <td>{{customfieldsetup.customeField3}}</td>
                                <td>{{customfieldsetup.customeField4}}</td>
                                <td>{{customfieldsetup.customeField5}}</td>
                                <td>{{customfieldsetup.customeField6}}</td>
                                <td>{{customfieldsetup.codeLength }}</td>
                                <td>{{customfieldsetup.itemCodeGenerate }}</td>
                                
                                <td>
                                    <a ng-href="#/customfieldsetups/{{customfieldsetup.id}}"><i class="fa fa-search text-blue small-icons"></i></a>
                                    <a ng-href="#/customfieldsetups/update/{{customfieldsetup.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                    <a ng-click="vm.delete(customfieldsetup)"><i class="fa fa-close text-red small-icons"></i></a>
                                </td>

                            </tr>

                        </tbody>
                    </table>
                    <dir-pagination-controls max-size="5"
                                             direction-links="true"
                                             boundary-links="true">
                    </dir-pagination-controls>

                </div>
            </div>
        </div>



    </div>





</div>










