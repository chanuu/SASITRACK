<div ng-controller="app.views.cuttingmasters.index as vm">
    <route-loading-indicator></route-loading-indicator>


    <div class="row">
        <div class="col-lg-12">

          
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Cutting Master
                </div>
                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">
                        <div class="input-group pull-right">
                            <button ng-click="vm.create()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewCuttingMaster")</button>
                        </div>
                    </div>
                    <div  class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <table id="example2" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th> </th>


                                <th ng-click="sort('styleNo')">@L("CuttingMasterNo") </th>
                                <th ng-click="sort('orderType')">@L("StyleNo")</th>
                               
                                <th>@L("Remark")</th>

                                <th>@L("Status")</th>
                                <th>@L("Actions")</th>
                          




                            </tr>
                        </thead>
                        <tbody>

                            <tr ng-animate="'animate'" dir-paginate="item in vm.items|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">

                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>

                                <td>{{item.cuttingMasterNo}}</td>
                                <td>{{item.style}}</td>
                             
                                <td>{{item.remark}}</td>
                                <td>{{item.status}}</td>
                             

                                <td>
                                    <a ng-href="#/cuttingmasters/{{item.id}}"><i class="fa fa-search text-blue small-icons"></i></a>
                                    <a ng-href="#/cuttingmasters/update/{{item.id}}"><i class="fa fa-edit text-green small-icons"></i></a>

                                    <a ng-click="testMe()"><i class="fa fa-close text-red small-icons"></i></a>


                                </td>

                            </tr>

                        </tbody>
                    </table>
                    <dir-pagination-controls max-size="5"
                                             direction-links="true"
                                             boundary-links="true">
                    </dir-pagination-controls>

                </div>
            </div>
        </div>



    </div>





</div>










