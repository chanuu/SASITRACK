<div id="ReceiveNoteItemDetail" ng-controller="app.views.stockreceiveheaders.serialItemDetail as vm">


    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Receive Note Items
        </div>
        <div uib-collapse="isCollapsed" class="panel-body">

            <div class="event-actions">
                <a class="btn btn-sm btn-primary" ng-href="#/stockreceiveheaders" angular-ripple><i class="fa fa-arrow-circle-left"></i> back to Receive Note Items</a>

            </div>



            <div class="panel-heading margin">
                <h3 class="block">{{vm.receivenoteitem.itemCode}} Details details</h3>
            </div>



            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Item Code</label>
                        <div class="controls">

                            <div> {{vm.receivenoteitem.itemCode}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Is Include Serials</label>
                        <div class="controls">

                            <div> {{vm.receivenoteitem.isIncludeSerials }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Purchase Price </label>
                        <div class="controls">

                            <div> {{vm.receivenoteitem.purchasePrice }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Nos</label>
                        <div class="controls">
                            <div>{{vm.receivenoteitem.nos}} </div>
                            <span class="help-inline"></span>
                        </div>
                    </div>

                </div>

               

            </div>



            <div ng-show="vm.receivenoteitem.isIncludeSerials == true" class="row margin-adjust">

                <button ng-click="vm.serialItemCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("Create")</button>
            </div>
            <div ng-show="vm.receivenoteitem.isIncludeSerials == true" class="row margin-adjust">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table ng-show="vm.receivenoteitem.isIncludeSerials == true" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th># </th>
                        <th>@L("Serial No") </th>
                        <th>@L("Status")</th>
                        <th>@L("Action")</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="serialitem in vm.receivenoteitem.serialItems|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{serialitem.serialNo }}</td>
                        <td>{{serialitem.status }}</td>

                        <td>
                            <a ng-href="#/stockreceiveheaders/serials/update/{{serialitem.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                            <a ng-click="vm.delete(serialitem)"><i class="fa fa-close text-red small-icons"></i></a>
                        </td>

                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>

        </div>
    </div>
</div>



