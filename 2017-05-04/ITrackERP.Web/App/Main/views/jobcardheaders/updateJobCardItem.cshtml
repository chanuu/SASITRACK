<div id="UpdateJobCardItems" ng-controller="app.views.jobcardheaders.updateJobCardItem as vm">

    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Job card Items
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>


            <div class="panel-body">

                <form name="jobcardItemUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Item Code</label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="setItemNo($item)" ng-model="selectedItemCode" uib-typeahead="itemmaster as itemmaster.itemNo for itemmaster in vm.itemmasters | filter:$viewValue | limitTo:8" class="form-control">
                                <span class="help-inline"></span>
                            </div>

                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Serial No</label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="setSerialNo($item)" ng-model="selectedSerialNo" uib-typeahead="serialitem as serialitem.serialNo for serialitem in vm.serialitems | filter:$viewValue | limitTo:8" class="form-control">
                                <span class="help-inline"></span>
                            </div>

                        </div>
                    </div>

                    <div class="row margin">
                    
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Amount </label>

                            <div class="controls">

                                <input type="text" class="form-control" ng-model="vm.jobcarditem.amount" name="amount" ng-messages="jobcardItemUpdateForm.amount.$error" required />

                                <div ng-messages="jobcardItemUpdateForm.amount.$error" ng-if="jobcardItemUpdateForm.amount.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Price</label>

                            <div class="controls">

                                <input type="text" class="form-control" ng-model="vm.jobcarditem.price" name="price" ng-messages="jobcardItemUpdateForm.price.$error" required />

                                <div ng-messages="jobcardItemUpdateForm.price.$error" ng-if="jobcardItemUpdateForm.price.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="row margin">
                       
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Sub Total </label>

                            <div class="controls">

                                <input type="text" class="form-control" ng-model="vm.jobcarditem.subTotal" name="subTotal" ng-messages="jobcardItemUpdateForm.subTotal.$error" required />

                                <div ng-messages="jobcardItemUpdateForm.subTotal.$error" ng-if="jobcardItemUpdateForm.subTotal.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>



                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to job card header</a>

                    </div>



                </form>
            </div>
        </div>

    </div>

</div>