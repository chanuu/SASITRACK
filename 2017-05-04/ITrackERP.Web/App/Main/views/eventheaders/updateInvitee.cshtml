<div id="UpdateInviteeDetails" ng-controller="app.views.eventheaders.updateInvitee as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Invitee Details
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>


            <div class="panel-body">
                <form name="inviteeUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Name</label>
                            <div class="controls">
                                <input name="employee" type="text" ng-model="selectedEmployee" uib-typeahead="employee as employee.fullName for employee in vm.employees | filter:$viewValue | limitTo:8" class="form-control" required>
                                <span class="help-inline"></span>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Status</label>
                            <div class="controls">
                                <select class="form-control" name="type" ng-model="vm.invitee.status">
                                    <option value="Going">Going</option>
                                    <option value="Not going">Not going</option>
                                    <option value="Interested in">Interested in</option>
                                </select>
                                <span class="help-inline"></span>

                            </div>
                        </div>
                    </div>



                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to event header</a>

                    </div>


                </form>

            </div>
        </div>

    </div>
</div>