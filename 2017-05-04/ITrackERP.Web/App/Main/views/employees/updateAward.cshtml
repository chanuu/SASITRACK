<div id="UpdateAwardDetails" ng-controller="app.views.employees.updateAward as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Award Details
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>


            <div class="panel-body">
                <form name="awardUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Award Name</label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.award.awardName" name="awardName" ng-messages="awardUpdateForm.awardName.$error" required />

                                <div ng-messages="awardUpdateForm.awardName.$error" ng-if="awardUpdateForm.awardName.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Award Date</label>

                            <p class="input-group">
                                <input type="text" class="form-control" uib-datepicker-popup ng-model="fdate" is-open="dpOpenStatus.fdate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />
                                <span class="input-group-btn">
                                    <button type="button"
                                            class="btn btn-default"
                                            ng-click="setDpOpenStatus('fdate', $event)">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                            </p>
                        </div>

                    </div>

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Remark</label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.award.remark" name="remark" ng-maxlength="100" ng-messages="awardUpdateForm.remark.$error" />

                                <div ng-messages="awardUpdateForm.remark.$error" ng-if="awardUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>



                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to employee details</a>

                    </div>


                </form>

            </div>
        </div>

    </div>
</div>