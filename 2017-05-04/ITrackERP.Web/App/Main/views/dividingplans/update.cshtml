<div id="UpdateDividingPlanHeader" ng-controller="app.views.dividingplans.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Dividing Plan Header
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.style.styleNo}} Update</h3>


            <div class="panel-body">
                <form name="dividingPlanHeaderUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Style No</label>
                            <div class="controls">
                                <input type="text" ng-model="selectedStyle" uib-typeahead="style as style.styleNo for style in vm.styles | filter:$viewValue | limitTo:8" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>
                       
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Line No</label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="setLineNo($item)" ng-model="selectedLineNo" uib-typeahead="department as department.name for department in vm.departments | filter:$viewValue | limitTo:8" class="form-control">
                                <span class="help-inline"></span>
                            </div>

                        </div>

                    </div>



                    <div class="row margin">
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Total Employee </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.totalEmployee" name="totalEmployee" ng-messages="dividingPlanHeaderUpdateForm.totalEmployee.$error" required />

                                <div ng-messages="dividingPlanHeaderUpdateForm.totalEmployee.$error" ng-if="dividingPlanHeaderUpdateForm.totalEmployee.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Target</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.target" name="target" ng-messages="dividingPlanHeaderUpdateForm.target.$error" required />

                                <div ng-messages="dividingPlanHeaderUpdateForm.target.$error" ng-if="dividingPlanHeaderUpdateForm.target.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="row margin">
                       
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Production per Hour</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.productionPerHour" name="productionPerHour" ng-messages="dividingPlanHeaderUpdateForm.productionPerHour.$error" required/>

                                <div ng-messages="dividingPlanHeaderUpdateForm.productionPerHour.$error" ng-if="dividingPlanHeaderUpdateForm.productionPerHour.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Remark</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.remark" name="remark" ng-maxlength="100" ng-messages="dividingPlanHeaderUpdateForm.remark.$error" />

                                <div ng-messages="dividingPlanHeaderUpdateForm.remark.$error" ng-if="dividingPlanHeaderUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to machine requirement</a>

                    </div>



                </form>
            </div>
        </div>

    </div>
</div>