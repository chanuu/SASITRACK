<div ng-controller="app.views.rentmachines.index as vm">
    <route-loading-indicator></route-loading-indicator>


    <div class="row">
        <div class="col-lg-12">


            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Rent Machines
                </div>
                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">
                        <div class="input-group pull-right">
                            <button ng-click="vm.rentmachineCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewRentMachine")</button>
                        
                        </div>
                    </div>
                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <table id="example2" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th> </th>


                                <th>@L("RentID") </th>
                                <th>@L("MachineType")</th>
                                <th>@L("MachineSerialNo")</th>
                                <th>@L("RentBarcode")</th>
                                <th>@L("FromDate")</th>
                                <th>@L("ToDate")</th>
                                <th>@L("Remark")</th>
                                <th>@L("Status")</th>
                                <th>@L("Action")</th>


                            </tr>
                        </thead>
                        <tbody>

                            <tr ng-animate="'animate'" dir-paginate="rentmachine in vm.rentMachines|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">

                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>

                                <td>{{rentmachine.rentManagementID}}</td>
                                <td>{{rentmachine.machineType}}</td>
                                <td>{{rentmachine.machineSerialNo}}</td>
                                <td>{{rentmachine.rentBarcode}}</td>
                                <td>{{rentmachine.fromDate | date:'yyyy/MM/dd'}}</td>
                                <td>{{rentmachine.toDate | date:'yyyy/MM/dd'}}</td>
                                <td>{{rentmachine.remark}}</td>
                                <td>{{rentmachine.status}}</td>


                               

                                <td>
                                    <a ng-href="#/rentmachines/{{rentmachine.id}}"><i class="fa fa-search text-blue small-icons"></i></a>
                                    <a ng-href="#/rentmachines/update/{{rentmachine.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                    <a ng-click="vm.delete(rentmachine)"><i class="fa fa-close text-red small-icons"></i></a>
                                </td>

                            </tr>

                        </tbody>
                    </table>
                    <dir-pagination-controls max-size="5"
                                             direction-links="true"
                                             boundary-links="true">
                    </dir-pagination-controls>

                </div>
            </div>
        </div>



    </div>





</div>










