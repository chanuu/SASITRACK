<div ng-controller="app.views.itemmasters.index as vm">

    <div class="row">
        <div class="col-md-12 ">

            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Item Masters
                </div>

                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">

                        <button ng-click="vm.itemmasterCreationModal()" angular-ripple class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewItemMaster")</button>
                    </div>


                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th># </th>
                                <th>@L("Item Type") </th>
                                <th>@L("Item No")</th>
                                <th>@L("Supplier")</th>
                                <th>@L("Uom")</th>
                                <th>@L("Status")</th>
                                <th>@L("Max Qty")</th>
                                <th>@L("Re Order Qty")</th>
                                <th>@L("Minimum Qty")</th>
                                <th>@L("Action ")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-animate="'animate'" dir-paginate="itemmaster in vm.itemMasters|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                <td>{{itemmaster.itemType}}</td>
                                <td>{{itemmaster.itemNo}}</td>
                                <td>{{itemmaster.supplier}}</td>
                                <td>{{itemmaster.uom}}</td>
                                <td>{{itemmaster.status}}</td>
                                <td>{{itemmaster.maxQty}}</td>
                                <td>{{itemmaster.reOrderQty}}</td>
                                <td>{{itemmaster.minimumQty}}</td>

                                <td>
                                    <a ng-href="#/itemmasters/{{itemmaster.id}}"><i class="fa fa-search text-green"></i></a>
                                    <a ng-href="#/itemmasters/update/{{itemmaster.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                    <a ng-click="vm.delete(itemmaster)"><i class="fa fa-close text-red small-icons"></i></a>

                                </td>


                            </tr>
                        </tbody>
                        <dir-pagination-controls max-size="5"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>