<div ng-controller="app.views.styles.index as vm">
    <route-loading-indicator></route-loading-indicator>
   <div class="row">
       <div class="col-lg-3 col-s-6">
           <div class="hpanel">
              
               <div  class="panel-body text-center h-200">
                   <i class="pe-7s-scissors fa-4x"></i>
                   <h3 class="m-xs">{{ vm.styles.length}}</h3>
                   <h3 class="font-extra-bold no-margins text-success">
                       Styles
                   </h3>
                   <small>{{ vm.styles.length}} open styles.</small>
               </div>
               
           </div>
       </div>
       <div class="col-lg-3 col-s-6">
           <a ng-href="#/buyers">
               <div class="hpanel">

                   <div class="panel-body text-center h-200">
                       <i class="pe-7s-users fa-4x"></i>
                       <h3 class="m-xs">8</h3>
                       <h3 class="font-extra-bold no-margins text-success">
                           Buyers
                       </h3>
                       <small>8 active buyers.</small>
                   </div>

               </div>
           </a>
       </div>
       <div class="col-lg-3 col-s-6">
           <div class="hpanel">
              
               <div  class="panel-body text-center h-200">
                   <i class="pe-7s-credit fa-4x"></i>
                   <h3 class="m-xs">15</h3>
                   <h3 class="font-extra-bold no-margins text-success">
                      Work Orders
                   </h3>
                   <small>15 Work Orders Pending </small>
               </div>
               
           </div>
       </div>
       <div class="col-lg-3 col-s-6">
           <div class="hpanel">
               
               <div  class="panel-body text-center h-200">
                   <i class="pe-7s-global fa-4x"></i>
                   <h3 class="m-xs">3</h3>
                   <h3 class="font-extra-bold no-margins text-success">
                       Companies
                   </h3>
                   <small>3 locations connect to network.</small>
               </div>
               
           </div>
       </div>

   </div>
 
    <div class="row">
        <div class="col-lg-12">


    

            

            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                   Style Master
                </div>
                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">
                        <div class="input-group pull-right">
                            <button ng-click="vm.styleCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewStyle")</button>
                        </div>
                      </div>
                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <table id="example2" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                              
                                <th> </th>


                                <th ng-click="sort('styleNo')">@L("StyleNo") </th>
                                <th ng-click="sort('orderType')">@L("OrderType")</th>
                                <th>@L("ArticleNo")</th>
                                <th>@L("Season")</th>
                                <th>@L("BocNo")</th>
                                <th>@L("ItemType")</th>
                                <th>@L("Remark")</th>
                                <th>@L("Action")</th>
                               




                            </tr>
                        </thead>
                        <tbody>

                            <tr ng-animate="'animate'" dir-paginate="style in vm.styles|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">

                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>

                                <td>{{style.styleNo}}</td>
                                <td>{{style.orderType}}</td>
                                <td>{{style.articleNo}}</td>
                                <td>{{style.bocNo}}</td>
                                <td>{{style.season}}</td>
                                <td>{{style.itemType}}</td>
                                <td>{{style.remark}}</td>
                                <td>
                                    <a ng-href="#/styles/{{style.id}}"><i class="fa fa-search text-blue small-icons"></i></a>
                                    <a ng-href="#/styles/update/{{style.id}}"><i class="fa fa-edit text-green small-icons"></i></a>

                                    <a ng-click="vm.delete(style)"><i class="fa fa-close text-red small-icons"></i></a>
                                   
                                
                                </td>
                               
                            </tr>

                        </tbody>
                    </table>
                    <dir-pagination-controls max-size="5"
                                             direction-links="true"
                                             boundary-links="true">
                    </dir-pagination-controls>

                </div>
            </div>
        </div>



    </div>




    
</div>










