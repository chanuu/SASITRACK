
<div id="createWorkCycleVideo">

    <form name="workCycleVideoCreateForm" role="form" novalidate class="form-validation">




        <div class=" margin">
            <h3 class="block">{{vm.operation.operationPoolId }} Details details</h3>
        </div>

        <div class="panel-body">
            <div class="row margin">

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Remark</label>

                    <div class="controls">
                        <input type="text" class="form-control" ng-model="workcyclevideo.remark" name="remark" ng-maxlength="100" ng-messages="workCycleVideoCreateForm.remark.$error"/>

                        <div ng-messages="workCycleVideoCreateForm.remark.$error" ng-if="workCycleVideoCreateForm.remark.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <br>Work Cycle Video:
                    <input type="file" name="file" ngf-select ng-model="file" ngf-pattern="'video/*'" ngf-accept="'video/*'" required>

                </div>
            </div>

            <hr />

            <div class="event-actions">



                <a class="btn btn-sm btn-green" angular-ripple ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                <a class="btn btn-sm btn-blue" angular-ripple ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

            </div>


        </div>

    </form>


</div>
