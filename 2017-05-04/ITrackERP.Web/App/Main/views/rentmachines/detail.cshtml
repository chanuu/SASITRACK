<div id="RentMachineDetail" ng-controller="app.views.rentmachines.detail as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Rent Machines
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">
            <div class="event-actions">
                <a class="btn btn-primary btn-sm btn-blue" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> Back </a>

                <a class="btn btn-primary btn-sm btn-red" ng-click="vm.updateStatus()" ng-disabled="vm.rentmachine.status == 'Return'"><i class="fa fa-arrow-circle-left"></i> Return</a>

            </div>
            <hr />



            <h3 class="block">{{vm.rentmachine.machineSerialNo}} Details</h3>


            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Rent Management ID</label>
                        <div class="controls">
                            <div class="">{{vm.rentmachine.rentManagementID}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Machine Type</label>
                        <div class="controls">
                            <div class="">{{vm.rentmachine.machineType}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Machine Serial No</label>
                        <div class="controls">
                            <div class="">{{vm.rentmachine.machineSerialNo}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Rent Barcode</label>
                        <div class="controls">
                            <div class="">{{vm.rentmachine.rentBarcode}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">From Date</label>
                        <div class="controls">
                            <div type="text" class="">{{vm.rentmachine.fromDate | date:'yyyy/MM/dd'}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">To Date</label>
                        <div class="controls">
                            <div class="">{{vm.rentmachine.toDate | date:'yyyy/MM/dd'}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>
                <div class="row margin">

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Remark</label>
                        <div class="controls">
                            <div> {{vm.rentmachine.remark}}</div>

                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Status</label>
                        <div class="controls">
                            <div class="">{{vm.rentmachine.status}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>




            </div>
        </div>

    </div>
</div>