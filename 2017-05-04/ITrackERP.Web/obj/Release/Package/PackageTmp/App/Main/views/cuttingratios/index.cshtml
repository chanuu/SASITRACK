<div ng-controller="app.views.cuttingratios.index as vm">
    <route-loading-indicator></route-loading-indicator>
   

    <div class="row">
        <div class="col-lg-12">



           


            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Cutting Ratio
                </div>
                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">
                        <div class="input-group pull-right">
                            <button ng-click="vm.create()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewStyle")</button>
                        </div>
                    </div>
                    <div class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <table id="example2" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th> </th>


                                <th ng-click="sort('styleNo')">@L("ratioNo") </th>
                                <th ng-click="sort('orderType')">@L("StyleNo")</th>
                                <th>@L("Color")</th>
                                <th>@L("markerLength")</th>
                               
                                <th>@L("markerWidth")</th>
                                <th>@L("layerLength")</th>
                                <th>@L("FabricType")</th>
                                <th>@L("Remark")</th>
                                <th>@L("Actions")</th>





                            </tr>
                        </thead>
                        <tbody>

                            <tr ng-animate="'animate'" dir-paginate="ratio in vm.ratio|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">

                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>

                                <td>{{ratio.ratioNo}}</td>
                                <td>{{ratio.styleNo}}</td>
                                <td>{{ratio.color}}</td>
                                <td>{{ratio.markerLength}}</td>
                                <td>{{ratio.markerWidth}}</td>
                                <td>{{ratio.layerLength}}</td>
                                <td>{{ratio.fabricType}}</td>
                                <td>{{ratio.remark}}</td>

                                <td>
                                    <a ng-href="#/cuttingratios/{{ratio.id}}"><i class="fa fa-search text-blue small-icons"></i></a>
                                    <a ng-href="#/styles/update/{{style.id}}"><i class="fa fa-edit text-green small-icons"></i></a>

                                    <a ng-click="testMe()"><i class="fa fa-close text-red small-icons"></i></a>


                                </td>

                            </tr>

                        </tbody>
                    </table>
                    <dir-pagination-controls max-size="5"
                                             direction-links="true"
                                             boundary-links="true">
                    </dir-pagination-controls>

                </div>
            </div>
        </div>



    </div>





</div>










