<div id="OperationDetail" ng-controller="app.views.operations.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
           Operations
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.operation.operationCode}} Details</h3>


            <div class="panel-body">
                <form name="operationUpdateForm" role="form" novalidate class="form-validation">

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Operation Code </label>
                          
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.operation.operationCode" name="buyerName" ng-messages="operationUpdateForm.operationCode.$error" required />

                                <div ng-messages="operationUpdateForm.operationCode.$error" ng-if="operationUpdateForm.operationCode.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Operation Name  </label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.operation.operationName" name="operationName" ng-messages="operationUpdateForm.operationName.$error" required />

                                <div ng-messages="operationUpdateForm.operationName.$error" ng-if="operationUpdateForm.operationName.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Machine Type </label>
                            <div class="controls">
                                <input type="text" ng-model="vm.operation.machineType" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">SMV </label>
                            <div class="controls">
                                <input type="text" ng-model="vm.operation.smv" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>

                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">SMV Type </label>
                            <div class="controls">
                                <input type="text" ng-model="vm.operation.smvType" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Remark </label>
                            
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.operation.remark" name="remark" ng-maxlength="100" ng-messages="operationUpdateForm.remark.$error" />

                                <div ng-messages="operationUpdateForm.remark.$error" ng-if="operationUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Part Name </label>
                       
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.operation.partName" name="partName" ng-messages="operationUpdateForm.partName.$error" required />

                                <div ng-messages="operationUpdateForm.partName.$error" ng-if="operationUpdateForm.partName.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Opration Role  </label>
                            <div class="controls">
                                <input type="text" ng-model="vm.operation.operationRole" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>
                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Operation Grade </label>
                            <div class="controls">
                                <input type="text" ng-model="vm.operation.operationGrade  " class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Machine Speed </label>
                            <div class="controls">

                                <input type="text" ng-model="vm.operation.machineSpeed" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>
                    </div>


                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Seam Length </label>
                            <div class="controls">
                                <input type="text" ng-model="vm.operation.seamLength" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Seam Allowance  </label>
                            <div class="controls">
                                <input type="text" ng-model="vm.operation.seamAllowance" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>
                    </div>

                    <div class="row margin">




                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">SPI</label>
                            <div class="controls">
                                <input type="text" ng-model="vm.operation.spi" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>
                    </div>


                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to operation pool</a>

                    </div>


</form>

</div>
        </div>

    </div>
</div>