<div id="departmentDetail" ng-controller="app.views.workorders.updateWorkorderItem as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            WorkOrder Item(Edit)
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update Workorder Item</h3>


            <div class="panel-body">
                <form name="workorderitemUpdateForm" role="form" novalidate class="form-validation">


                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">color </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.item.color" name="color" ng-messages="workorderitemUpdateForm.color.$error" required />

                                <div ng-messages="workorderitemUpdateForm.color.$error" ng-if="workorderitemUpdateForm.color.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Size</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.item.size" name="size" ng-maxlength="100" ng-messages="workorderitemUpdateForm.remark.$error" />

                                <div ng-messages="workorderitemUpdateForm.size.$error" ng-if="workorderitemUpdateForm.size.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Length</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.item.length" name="length" ng-messages="workorderitemUpdateForm.color.$error" required />

                                <div ng-messages="workorderitemUpdateForm.length.$error" ng-if="departmentUpdateForm.length.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Size</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.item.quantity" name="quantity" ng-maxlength="100" ng-messages="workorderitemUpdateForm.remark.$error" />

                                <div ng-messages="workorderitemUpdateForm.quantity.$error" ng-if="workorderitemUpdateForm.quantity.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>







                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back </a>

                    </div>


                </form>

            </div>
        </div>

    </div>
</div>