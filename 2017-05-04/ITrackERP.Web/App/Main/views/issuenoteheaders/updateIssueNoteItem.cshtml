<div id="UpdateIssueNoteItems" ng-controller="app.views.issuenoteheaders.updateIssueNoteItem as vm">

    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Issue Note Items
        </div>
     
        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>


            <div class="panel-body">

                <form name="issueNoteItemUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Cut No </label>

                            <div class="controls">

                                <input type="text" class="form-control" ng-model="vm.issuenoteitem.cutNo" name="cutNo" ng-messages="issueNoteItemUpdateForm.cutNo.$error" required />

                                <div ng-messages="issueNoteItemUpdateForm.cutNo.$error" ng-if="issueNoteItemUpdateForm.cutNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Color </label>

                            <div class="controls">

                                <input type="text" class="form-control" ng-model="vm.issuenoteitem.color" name="color" ng-messages="issueNoteItemUpdateForm.color.$error" />

                            </div>
                        </div>

                    </div>

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Size </label>

                            <div class="controls">

                                <input type="text" class="form-control" ng-model="vm.issuenoteitem.size" name="size" ng-messages="issueNoteItemUpdateForm.size.$error" />

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">No of Plys </label>

                            <div class="controls">

                                <input type="text" class="form-control" ng-model="vm.issuenoteitem.noOfPlys" name="noOfPlys" ng-messages="issueNoteItemUpdateForm.noOfPlys.$error" />

                            </div>
                        </div>

                    </div>

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">No of Item </label>

                            <div class="controls">

                                <input type="text" class="form-control" ng-model="vm.issuenoteitem.noOfItem" name="noOfItem" ng-messages="issueNoteItemUpdateForm.noOfItem.$error" />

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">PO No</label>

                            <div class="controls">

                                <input type="text" class="form-control" ng-model="vm.issuenoteitem.poNo" name="poNo" ng-messages="issueNoteItemUpdateForm.poNo.$error" />

                            </div>
                        </div>

                    </div>

                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to issue note header</a>

                    </div>



                </form>
            </div>
        </div>

    </div>

</div>