<div id="IssueNoteHeaderDetail" ng-controller="app.views.issuenoteheaders.detail as vm">


    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Issue Note Headers
        </div>
        <div uib-collapse="isCollapsed" class="panel-body">

            <div class="event-actions">
                <a class="btn btn-sm btn-primary" ng-href="#/issuenoteheader" angular-ripple><i class="fa fa-arrow-circle-left"></i> Back</a>
            </div>




            <div class="panel-heading margin">
                <h3 class="block">{{vm.issuenoteheader.issueNoteNo}} Details</h3>
            </div>

            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Issue Note No</label>
                        <div class="controls">

                            <div> {{vm.issuenoteheader.issueNoteNo }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Style No </label>
                        <div class="controls">

                            <div> {{vm.issuenoteheader.styleNo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Issue To </label>
                        <div class="controls">

                            <div> {{vm.issuenoteheader.issueTo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Issue Type </label>
                        <div class="controls">

                            <div>{{vm.issuenoteheader.issueType}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>


                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Issued By</label>
                        <div class="controls">

                            <div> {{vm.issuenoteheader.issuedBy}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Remark </label>
                        <div class="controls">

                            <div>{{vm.issuenoteheader.remark }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>
               
            </div>



            <div class="row margin-adjust">

                <button ng-click="vm.issueNoteItemCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("Create")</button>
            </div>
            <div class="row margin-adjust">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th># </th>
                        <th>@L("Cut No")</th>
                        <th>@L("Color")</th>
                        <th>@L("Size")</th>
                        <th>@L("No of Plys")</th>
                        <th>@L("No of Item")</th>
                        <th>@L("PO No")</th>
                        <th>@L("Actions")</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="issuenoteitem in vm.issuenoteheader.issueNoteItems|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{issuenoteitem.cutNo}}</td>
                        <td>{{issuenoteitem.color}}</td>
                        <td>{{issuenoteitem.size}}</td>
                        <td>{{issuenoteitem.noOfPlys}}</td>
                        <td>{{issuenoteitem.noOfItem}}</td>
                        <td>{{issuenoteitem.poNo}}</td>

                        <td>
                            <a ng-href="#/issuenoteheader/item/update/{{issuenoteitem.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                            <a ng-click="vm.delete(issuenoteitem)"><i class="fa fa-close text-red small-icons"></i></a>
                        </td>

                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>







        </div>
    </div>



