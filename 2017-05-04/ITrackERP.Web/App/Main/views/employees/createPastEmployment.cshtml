
<div id="createPastEmployment">

    <form name="pastEmploymentCreateForm" role="form" novalidate class="form-validation">

        <div class=" margin">
            <h3 class="block">{{vm.employee.fullName }} Details </h3>
        </div>

        <div class="panel-body">
            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Company Name</label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="pastEmployment.companyName" name="companyName" ng-messages="pastEmploymentCreateForm.companyName.$error" required />

                        <div ng-messages="pastEmploymentCreateForm.companyName.$error" ng-if="pastEmploymentCreateForm.companyName.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Designation</label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="pastEmployment.designation" name="designation" />
                    </div>
                </div>
            </div>

            <div class="row margin">
                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">From Date</label>

                    <p class="input-group">
                        <input type="text" class="form-control" uib-datepicker-popup ng-model="fdate" is-open="dpOpenStatus.fdate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />
                        <span class="input-group-btn">
                            <button type="button"
                                    class="btn btn-default"
                                    ng-click="setDpOpenStatus('fdate', $event)">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </button>
                        </span>
                    </p>
                </div>

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">To Date</label>

                    <p class="input-group">
                        <input type="text" class="form-control" uib-datepicker-popup ng-model="tdate" is-open="dpOpenStatus.tdate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />
                        <span class="input-group-btn">
                            <button type="button"
                                    class="btn btn-default"
                                    ng-click="setDpOpenStatus('tdate', $event)">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </button>
                        </span>
                    </p>
                </div>
            </div>

            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Remark</label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="pastEmployment.remark" name="remark" ng-maxlength="100" ng-messages="pastEmploymentCreateForm.remark.$error" />

                        <div ng-messages="pastEmploymentCreateForm.remark.$error" ng-if="pastEmploymentCreateForm.remark.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>
            </div>


            <hr />

            <div class="event-actions">



                <a class="btn btn-sm btn-green" angular-ripple ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                <a class="btn btn-sm btn-blue" angular-ripple ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

            </div>


        </div>

    </form>


</div>
