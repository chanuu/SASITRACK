
<div id="createWorkCycleImage">

    <form name="workCycleImageCreateForm" role="form" novalidate class="form-validation">




        <div class=" margin">
            <h3 class="block">{{vm.operation.operationPoolId }} Details details</h3>
        </div>

        <div class="panel-body">
            <div class="row margin">
            
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Remark</label>

                    <div class="controls">
                        <input type="text" class="form-control" ng-model="workcycleimage.remark" name="remark" ng-maxlength="100" ng-messages="workCycleImageCreateForm.remark.$error"/>

                        <div ng-messages="workCycleImageCreateForm.remark.$error" ng-if="workCycleImageCreateForm.remark.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>
           
                <div class="col-md-6 col-sm-12">                  
                    <br>Work Cycle Image:
                    <input type="file" name="file" ngf-select ng-model="file" ngf-pattern="'image/*'" ngf-accept="'image/*'" required>

                    <i ng-show="workCycleImageCreateForm.file.$error.maxSize">
                        File too large
                        {{errorFile.size / 1000000|number:1}}MB: max 2M
                    </i>
                    <img ng-show="workCycleImageCreateForm.file.$valid" ngf-thumbnail="file" class="thumb"> <button ng-click="file = null" ng-show="file">Remove</button>
                    <br>
             
                    <span class="progress" ng-show="file.progress >= 0">
                        <div style="width:{{file.progress}}%" ng-bind="file.progress + '%'"></div>
                    </span>
                    <span ng-show="file.result">Upload Successful</span>
                    <span class="err" ng-show="errorMsg">{{errorMsg}}</span>
                </div>
            </div>
            
                    <hr />

                    <div class="event-actions">



                        <a class="btn btn-sm btn-green" angular-ripple ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                        <a class="btn btn-sm btn-blue" angular-ripple ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

                    </div>


                </div>

</form>


</div>
