
<div id="createItem">

    <form name="ratioForm" role="form" novalidate class="form-validation">

        <div class=" margin">
            <h3 class="block">{{issuenoteitem.cutNo  }} Details</h3>
        </div>

        <div class="panel-body">

            <div class="row margin">
                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Size </label>

                    <div class="controls">

                        <input type="text" class="form-control" ng-model="item.size" name="size" ng-messages="ratioForm.size.$error" required />

                        <div ng-messages="ratioForm.cutNo.$error" ng-if="ratioForm.cutNo.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Lot </label>

                    <div class="controls">

                        <input type="text" class="form-control" ng-model="item.lot" name="lot" ng-messages="ratioForm.lot.$error" />

                    </div>
                </div>

            </div>

            

           
            <hr />

            <div class="event-actions">



                <a class="btn btn-sm btn-green" angular-ripple ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                <a class="btn btn-sm btn-blue" angular-ripple ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

            </div>


        </div>

    </form>


</div>