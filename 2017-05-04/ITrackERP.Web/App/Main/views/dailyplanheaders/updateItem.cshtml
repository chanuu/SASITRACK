<div id="UpdateDailyPlanItems" ng-controller="app.views.dailyplanheaders.updateItem as vm">

    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Daily Plan Items
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>


            <div class="panel-body">

                <form name="dailyplanitemUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Style No</label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="setStyle($item)" ng-model="selectedStyle" uib-typeahead="style as style.styleNo for style in vm.styles | filter:$viewValue | limitTo:8" class="form-control" required>
                                <span class="help-inline"></span>
                            </div>

                        </div>


                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">PO No </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dailyplanitem.poNo " name="poNo" ng-messages="dailyplanitemUpdateForm.poNo.$error" required />

                                <div ng-messages="dailyplanitemUpdateForm.poNo.$error" ng-if="dailyplanitemUpdateForm.poNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Color </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dailyplanitem.color " name="color" ng-messages="dailyplanitemUpdateForm.color.$error" required />

                                <div ng-messages="dailyplanitemUpdateForm.color.$error" ng-if="dailyplanitemUpdateForm.color.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Size </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dailyplanitem.size " name="size" ng-messages="dailyplanitemUpdateForm.size.$error" required />

                                <div ng-messages="dailyplanitemUpdateForm.size.$error" ng-if="dailyplanitemUpdateForm.size.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Length </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dailyplanitem.length " name="length" ng-messages="dailyplanitemUpdateForm.length.$error" required />

                                <div ng-messages="dailyplanitemUpdateForm.length.$error" ng-if="dailyplanitemUpdateForm.length.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">No of Plys </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dailyplanitem.noOfPlys " name="noOfPlys" ng-messages="dailyplanitemUpdateForm.noOfPlys.$error" required />

                                <div ng-messages="dailyplanitemUpdateForm.noOfPlys.$error" ng-if="dailyplanitemUpdateForm.noOfPlys.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">No of Item </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dailyplanitem.noOfItem " name="noOfItem" ng-messages="dailyplanitemUpdateForm.noOfItem.$error" required />

                                <div ng-messages="dailyplanitemUpdateForm.noOfItem.$error" ng-if="dailyplanitemUpdateForm.noOfItem.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to daily plan header</a>

                    </div>



                </form>
            </div>
        </div>

    </div>

</div>