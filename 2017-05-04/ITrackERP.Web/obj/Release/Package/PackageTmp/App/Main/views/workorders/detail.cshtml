<div id="WorkOrderDetail" ng-controller="app.views.workorders.detail as vm">


    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Work Orders
        </div>
        <div uib-collapse="isCollapsed" class="panel-body">

            <div class="event-actions">
                <a class="btn btn-sm btn-primary" ng-href="#/workorders" angular-ripple ><i class="fa fa-arrow-circle-left"></i> back to workOrder</a>

            </div>



            <div class="panel-heading margin">
                <h3 class="block">{{vm.workOrder.workOrderNo}} Details details</h3>
            </div>

            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Work Order No</label>
                        <div class="controls">

                            <div> {{vm.workOrder.workOrderNo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Start Date</label>
                        <div class="controls">

                            <div> {{vm.workOrder.startDate | date:'yyyy/MM/dd'}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">End Date</label>
                        <div class="controls">

                            <div> {{vm.workOrder.endDate | date:'yyyy/MM/dd'}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Status</label>
                        <div class="controls">

                            <div>{{vm.workOrder.status}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Priority</label>
                        <div class="controls">

                            <div> {{vm.workOrder.priority}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Remark</label>
                        <div class="controls">

                            <div>{{vm.workOrder.remark}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

            </div>



            <div class="row margin-adjust">

                <button ng-click="vm.workorderItemCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("Create")</button>
            </div>
            <div class="row margin-adjust">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th># </th>
                        <th ng-click="sort('workorderno')">@L("Color") </th>
                        <th>@L("Size")</th>
                        <th>@L("Length")</th>
                        <th>@L("Qty")</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="workorder in vm.workOrder.workOrderRatios|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{workorder.color}}</td>
                        <td>{{workorder.size}}</td>
                        <td>{{workorder.length}}</td>
                        <td>{{workorder.quantity}}</td>


                        <td><a ng-href="#/workorders/{{workorder.id}}"><i class="fa fa-search text-green"></i></a></td>

                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>







         </div>
       </div>


     
