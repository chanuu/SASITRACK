
<div id="machineRequirementIndex">

        <div class="row">
            <div class="col-md-12 ">

                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                            <a class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                        Machine Requirement
                    </div>

                    <div class="row margin-adjust">
                        <button ng-click="vm.styleLoadingUpdateModal()" angular-ripple class="btn btn-primary pull-right btn-green "> @L("UpdateStyleLoading")</button>
                    </div>

                    <div uib-collapse="isCollapsed" class="panel-body">


                        <div class="row margin">
                            <div class="col-md-6 col-sm-12">
                                <label class="control-label">Style No</label>
                                <div class="controls">

                                    <div> {{vm.styleloading.styleNo }} </div>
                                    <span class="help-inline"></span>

                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <label class="control-label">Line No </label>
                                <div class="controls">

                                    <div> {{vm.styleloading.lineNo}} </div>
                                    <span class="help-inline"></span>

                                </div>
                            </div>
                        </div>

                        <div class="row margin">
                            <div class="col-md-6 col-sm-12">
                                <label class="control-label">From Date</label>
                                <div class="controls">

                                    <div> {{vm.styleloading.fromDate | date:'yyyy-MM-dd '}} </div>
                                    <span class="help-inline"></span>

                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12 margin">
                                <label class="control-label">To Date </label>
                                <div class="controls">

                                    <div>{{vm.styleloading.toDate | date:'yyyy-MM-dd ' }} </div>
                                    <span class="help-inline"></span>

                                </div>
                            </div>

                        </div>

                        <div class="row margin">
                            <div class="col-md-6 col-sm-12">
                                <label class="control-label">Remark</label>
                                <div class="controls">

                                    <div> {{vm.styleloading.remark}} </div>
                                    <span class="help-inline"></span>

                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12 margin">
                                <label class="control-label">Location Code </label>
                                <div class="controls">

                                    <div>{{vm.styleloading.locationCode }} </div>
                                    <span class="help-inline"></span>

                                </div>
                            </div>

                        </div>

                        <div class="row margin-adjust">

                            <button ng-click="vm.machinerequirementItemCreationModal()" angular-ripple class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewMachineRequirement")</button>
                        </div>
                        <div class="row margin-adjust">
                            <form class="">
                                <div class="input-group">
                                    <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                    </span>
                                </div>
                            </form>
                        </div>

                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th># </th>
                                    <th>@L("Machine Type")</th>
                                    <th>@L("Nos")</th>
                                    <th>@L("Remark")</th>
                                    <th>@L("Action")</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-animate="'animate'" dir-paginate="machinerequirement in vm.machinerequirements|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                    <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                    <td>{{machinerequirement.machineType}}</td>
                                    <td>{{machinerequirement.nos}}</td>
                                    <td>{{machinerequirement.remark }}</td>

                                    <td>
                                        <a ng-click="vm.machinerequirementItemDetailModal(machinerequirement)" angular-ripple><i class="fa fa-search text-green"></i></a>
                                        <a ng-click="vm.machinerequirementItemUpdateModal(machinerequirement)" angular-ripple><i class="fa fa-edit text-green small-icons"></i></a>
                                        <a ng-click="vm.delete(machinerequirement)"><i class="fa fa-close text-red small-icons"></i></a>
                                    </td>


                                </tr>
                            </tbody>
                            <dir-pagination-controls max-size="5"
                                                     direction-links="true"
                                                     boundary-links="true">
                            </dir-pagination-controls>
                        </table>



                        <div class="event-actions">

                            <a class="btn btn-sm btn-blue" angular-ripple ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Close</a>

                        </div>

                    </div>
                </div>
            </div>
        </div>

</div>