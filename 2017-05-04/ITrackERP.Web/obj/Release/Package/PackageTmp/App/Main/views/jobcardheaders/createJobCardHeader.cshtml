
<div id="jobcardheader">
    <route-loading-indicator></route-loading-indicator>
    <form name="jobcardheaderCreateForm" role="form" novalidate class="form-validation">




        <div class=" margin">
          <!--  <h3 class="block">{{}} Details </h3>-->
        </div>

        <div class="panel-body">
            <div class="row margin">
                            
                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Asset No</label>
                    <div class="controls">
                        <input type="text" typeahead-on-select="setAssetNo($item)" ng-model="selectedAssetNo" uib-typeahead="asset as asset.assetNo for asset in vm.assets | filter:$viewValue | limitTo:8" class="form-control">
                        <span class="help-inline"></span>
                    </div>

                </div>

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Done By</label>
                    <div class="controls">
                        <input type="text" typeahead-on-select="setDoneBy($item)" ng-model="selectedEmployeeFullName" uib-typeahead="employee as employee.fullName for employee in vm.employees | filter:$viewValue | limitTo:8" class="form-control">
                        <span class="help-inline"></span>
                    </div>

                </div>
            </div>


            <div class="row margin"> 

                <div class="col-md-6 col-sm-12 margin">
                    <label class="control-label">Date </label>

                    <p class="input-group">
                        <input type="text" class="form-control" uib-datepicker-popup ng-model="rdate" is-open="dpOpenStatus.rdate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />

                        <span class="input-group-btn">
                            <button type="button"
                                    class="btn btn-default"
                                    ng-click="setDpOpenStatus('rdate', $event)">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </button>
                        </span>
                    </p>
                </div>

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Description </label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.jobCardHeader.description" name="description" ng-maxlength="100" ng-messages="jobcardheaderCreateForm.description.$error" />

                        <div ng-messages="jobcardheaderCreateForm.description.$error" ng-if="jobcardheaderCreateForm.description.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>    
            </div>

            <div class="row margin">

                <div class="col-md-6 col-sm-12">
                    <label class="control-label">Remark </label>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="vm.jobCardHeader.remark" name="remark" ng-maxlength="100" ng-messages="jobcardheaderCreateForm.remark.$error" />

                        <div ng-messages="jobcardheaderCreateForm.remark.$error" ng-if="jobcardheaderCreateForm.remark.$touched">

                            <div ng-messages-include="/App/Main/views/messages.html"></div>
                        </div>
                    </div>
                </div>
    </div> 
                       <hr />

                <div class="event-actions">



                    <a class="btn btn-sm btn-green" ng-click="vm.save()"><i class="fa fa-arrow-circle-left"></i> Save </a>

                    <a class="btn btn-sm btn-blue" ng-click="vm.cancel()"><i class="fa fa-arrow-circle-left"></i> Cancel</a>

                </div>


            </div>

    </form>


</div>