<div ng-controller="app.views.assetverifications.index as vm">
    <route-loading-indicator></route-loading-indicator>


    <div class="row">
        <div class="col-lg-12">


            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Asset Verification Header
                </div>
                <div uib-collapse="isCollapsed" class="panel-body">
                   
                   
                    <div class="row margin-adjust">
                        <div class="col-md-6 col-sm-12">
                            <br>Text File:
                            <input type="file" name="file" ngf-select ng-model="file" ngf-pattern="'.txt'" accept="text/plain">
                        </div>
                    </div>

                    <div class="row margin-adjust">

                        <span class="progress" ng-show="file.progress >= 0">
                            <div style="width:{{file.progress}}%" ng-bind="file.progress + '%'"></div>
                        </span>
                        <span ng-show="file.result">Upload Successful</span>
                        <span class="err" ng-show="errorMsg">{{errorMsg}}</span>
                    </div>

                        <div class="event-actions">

                            <a class="btn btn-primary btn-green" ng-click="vm.process()"><i class="fa fa-arrow-circle-right"></i> Process </a>

                        </div>

                        <div class="row margin-adjust">
                            <form class="">
                                <div class="input-group">
                                    <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                    </span>
                                </div>
                            </form>
                        </div>
                        <table id="example2" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th> </th>
                                    
                                    <th>@L("Asset Verification No")</th>
                                    <th>@L("Date")</th>
                                    <th>@L("Location Code") </th>
                                    <th>@L("Approved By")</th>
                                    <th>@L("Approved At")</th>
                                    <th>@L("Action")</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr ng-animate="'animate'" dir-paginate="assetVerificationHeader in vm.assetVerificationHeader|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">

                                    <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                   
                                    <td>{{assetVerificationHeader.assetVerificationNo}}</td>
                                    <td>{{assetVerificationHeader.date | date:'yyyy/MM/dd'}}</td>
                                    <td>{{assetVerificationHeader.locationCode}}</td>
                                    <td>{{assetVerificationHeader.approvedBy}}</td>
                                    <td>{{assetVerificationHeader.approvedAt | date:'yyyy/MM/dd HH:mm:ss'}}</td>

                                    <td>
                                        <a ng-href="#/assetverification/{{assetVerificationHeader.id}}"><i class="fa fa-search text-blue small-icons"></i></a>
                                    </td>

                                </tr>

                            </tbody>
                        </table>
                        <dir-pagination-controls max-size="5"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>

                    </div>
            </div>
        </div>

    </div>

</div>










