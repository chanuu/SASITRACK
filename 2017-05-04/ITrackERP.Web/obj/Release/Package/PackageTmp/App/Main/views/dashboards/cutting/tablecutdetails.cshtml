<div ng-controller="app.views.dashboard.cutting.tablecutdetails as vm">

    <div class="event-actions margin-adjust">



        <a class="btn btn-primary btn-green" ng-href="#/dashboards/cutting/" ng-click=""><i class="fa fa-arrow-circle-left"></i> Dashboard </a>

        <a class="btn btn-primary btn-blue" ng-href="#/dashboards/cutting/tablecut"><i class="fa fa-arrow-circle-left"></i> Back</a>

    </div>

    <div class="row" >
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed2 = !isCollapsed2"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Cutting Summary
                </div>
                <div uib-collapse="isCollapsed2" class="panel-body">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>
                                    Production Summary
                                    <small>{{date | date:'yyyy-MM-dd'}}</small>
                                </h5>
                                <div ibox-tools></div>
                            </div>
                            <div class="ibox-content">
                                <div>
                                    <am-chart class="chart-m" id="myFirstChart" options="amChartOptions" height="700px" width="100%"></am-chart>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>




    </div>

    <div class="row" >
        <div class="col-lg-12">

            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Cutting Details By Style
                </div>




                <div uib-collapse="isCollapsed" class="panel-body">
                    <div>
                        <div ng-repeat="(key, value) in datalist | groupBy: '[date,styleNo]'">

                            <h6> Style No: {{Split(key,1)}} for  Date: {{Split(key,0) | date:'yyyy/MM/dd'}} </h6>


                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>PO</th>
                                        <th>Color</th>
                                        <th>Size</th>
                                        <th><span class="pull-right">Nos</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="player in value">
                                        <td>{{ player.date | date:'yyyy/MM/dd' }}</td>
                                        <td>{{ player.poNo }}</td>
                                        <td>{{player.color}}</td>
                                        <td>{{player.size}}</td>
                                        <td><span class="pull-right">{{player.noOfItem}}</span></td>

                                    </tr>
                                    <tr>
                                        <td colspan="5"><span class="pull-right">Total : {{getSum(value)}}</span></td>
                                    </tr>
                                </tbody>



                            </table>


                        </div>







                    </div>

                </div>

            </div>

        </div>
    </div>







</div>
