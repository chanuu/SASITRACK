<div id="AssetDisposalHeaderDetail" ng-controller="app.views.assetdisposals.detail as vm">


    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Asset Disposal Headers
        </div>
        <div uib-collapse="isCollapsed" class="panel-body">

            <div class="event-actions">
                <a class="btn btn-sm btn-primary" ng-href="#/assetdisposals" angular-ripple><i class="fa fa-arrow-circle-left"></i> Back </a>

                <a class="btn btn-sm btn-primary btn-green" ng-click="vm.update(vm.assetdisposal)" angular-ripple ng-disabled="vm.assetdisposal.status == 'Approved'"><i class="fa fa-arrow-circle-left"></i> Approve</a>

            </div>

          


            <div class="panel-heading margin">
                <h3 class="block">{{vm.assetdisposal.disposalNoteNo }} Details details</h3>
            </div>



            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Disposal Note No</label>
                        <div class="controls">

                            <div> {{vm.assetdisposal.disposalNoteNo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Date</label>
                        <div class="controls">

                            <div> {{vm.assetdisposal.date | date:'yyyy/MM/dd'}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Type</label>
                        <div class="controls">

                            <div> {{vm.assetdisposal.type}} </div>
                            <span class="help-inline"></span>

                        </div>

                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Disposal By</label>
                        <div class="controls">

                            <div> {{vm.assetdisposal.disposalBy}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Approved By</label>
                        <div class="controls">

                            <div>{{vm.assetdisposal.approvedBy }} </div>
                            <span class="help-inline"></span>

                        </div>

                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Remark</label>
                        <div class="controls">

                            <div> {{vm.assetdisposal.remark}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Status</label>
                        <div class="controls">

                            <div>{{vm.assetdisposal.status}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>
            </div>



            <div class="row margin-adjust">

                <button ng-click="vm.assetdisposalItemCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("Create")</button>
            </div>
            <div class="row margin-adjust">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th># </th>
                        <th>@L("AssetNo") </th>
                        <th>@L("Description")</th>
                        <th>@L("Action")</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="assetdisposal in vm.assetdisposal.assetDisposalDetails|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{assetdisposal.assetNo }}</td>
                        <td>{{assetdisposal.description }}</td>


                        <td>
                            <a ng-href="#/assetdisposals/item/update/{{assetdisposal.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                            <a ng-click="vm.delete(assetdisposal)"><i class="fa fa-close text-red small-icons"></i></a>
                        </td>

                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>

        </div>
    </div>
</div>



