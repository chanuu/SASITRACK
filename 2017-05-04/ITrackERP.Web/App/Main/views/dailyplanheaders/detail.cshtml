<div id="DailyPlanHeaderDetail" ng-controller="app.views.dailyplanheaders.detail as vm">


    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Daily Plan Headers
        </div>
        <div uib-collapse="isCollapsed" class="panel-body">

            <div class="event-actions">
                <a class="btn btn-sm btn-primary" ng-href="#/dailyplanheader" angular-ripple><i class="fa fa-arrow-circle-left"></i> Back</a>
                <a class="btn btn-sm btn-primary btn-green" ng-click="vm.update(vm.dailyplanheader)" ng-disabled="vm.dailyplanheader.status == 'Approved'" angular-ripple><i class="fa fa-arrow-circle-left"></i> Approve</a>

            </div>




            <div class="panel-heading margin">
                <h3 class="block">{{vm.dailyplanheader.date | date:'yyyy/MM/dd'}} Details</h3>
            </div>

            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Date</label>
                        <div class="controls">

                            <div> {{vm.dailyplanheader.date | date:'yyyy/MM/dd' }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Plan By</label>
                        <div class="controls">

                            <div> {{vm.dailyplanheader.planBy }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                   
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Remark </label>
                        <div class="controls">

                            <div> {{vm.dailyplanheader.remark}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Status</label>
                        <div class="controls">

                            <div> {{vm.dailyplanheader.status}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
              
                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Approved By</label>
                        <div class="controls">

                            <div>{{vm.dailyplanheader.approvedBy}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>
               
            </div>



            <div class="row margin-adjust">

                <button ng-click="vm.dailyplanitemCreationModal()" ng-disabled="vm.dailyplanheader.status == 'Approved'" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("Create")</button>
            </div>
            <div class="row margin-adjust">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th># </th>
                        <th>@L("Style No")</th>
                        <th>@L("PO No")</th>
                        <th>@L("Color")</th>
                        <th>@L("Size")</th>
                        <th>@L("Length")</th>
                        <th>@L("NoOfPlys")</th>
                        <th>@L("NoOfItem")</th>
                        <th>@L("Actions")</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="dailyplanitem in vm.dailyplanheader.dailyPlanItems|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{dailyplanitem.styleNo}}</td>
                        <td>{{dailyplanitem.poNo}}</td>
                        <td>{{dailyplanitem.color}}</td>
                        <td>{{dailyplanitem.size}}</td>
                        <td>{{dailyplanitem.length}}</td>
                        <td>{{dailyplanitem.noOfPlys}}</td>
                        <td>{{dailyplanitem.noOfItem}}</td>

                        <td>
                            <a ng-href="#/dailyplanheader/item/update/{{dailyplanitem.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                            <a ng-click="vm.delete(dailyplanitem)"><i class="fa fa-close text-red small-icons"></i></a>
                        </td>

                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>







        </div>
    </div>



