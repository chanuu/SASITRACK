<div ng-controller="app.views.files.index as vm">
    <route-loading-indicator></route-loading-indicator>

    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Files
                </div>

            
                <div uib-collapse="isCollapsed" class="panel-body">
                    <div class="row margin-adjust">
                        <div class="input-group pull-right">
                            <button ng-click="vm.fileCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateNewFile")</button>
                        </div>
                    </div>
                    <div class="row margin-adjust">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Select File Category</label>
                            <div class="controls">
                                <input name="itemType" type="text" typeahead-on-select="filterByType()" ng-model="selectedItemType" uib-typeahead="custom as custom.itemType for custom in vm.customfieldsetups | filter:$viewValue | limitTo:8" class="form-control" required>
                                <span class="help-inline"></span>
                            </div>
                        </div>
                    </div>

                    <div ng-show="myOrderBy !=  null" class="row margin-adjust">
                        <form class="">
                            <div class="input-group">
                                <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <table ng-show="myOrderBy !=  null" id="example2" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th> </th>
                                <th>@L("Type") </th>
                                <th ng-show="vm.customcaption1 != null">{{vm.customcaption1}}</th>
                                <th ng-show="vm.customcaption2 != null">{{vm.customcaption2}}</th>
                                <th ng-show="vm.customcaption3 != null">{{vm.customcaption3}}</th>
                                <th ng-show="vm.customcaption4 != null">{{vm.customcaption4}}</th>
                                <th ng-show="vm.customcaption5 != null">{{vm.customcaption5}}</th>
                                <th ng-show="vm.customcaption6 != null">{{vm.customcaption6}}</th>
                                <th>@L("Category 1")</th>
                                <th>@L("Category 2")</th>
                                <th>@L("Category 3")</th>
                                <th>@L("Category 4")</th>
                                <th>@L("Category 5")</th>
                                <th>@L("Action")</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr ng-animate="'animate'" dir-paginate="file in vm.files|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">

                                <td><input type="checkbox" checked class="i-checks" name="input[]"></td>

                                <td>{{file.type}}</td>
                                <td>{{file.customField1}}</td>
                                <td>{{file.customField2}}</td>
                                <td>{{file.customField3}}</td>
                                <td>{{file.customField4}}</td>
                                <td>{{file.customField5}}</td>
                                <td>{{file.customField6}}</td>
                                <td>{{file.category1}}</td>
                                <td>{{file.category2}}</td>
                                <td>{{file.category3}}</td>
                                <td>{{file.category4}}</td>
                                <td>{{file.category5}}</td>

                                <td>
                                    <a ng-href="#/file/{{file.id}}"><i class="fa fa-search text-blue small-icons"></i></a>
                                    <a ng-href="#/file/update/{{file.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                    <a ng-click="vm.delete(file)"><i class="fa fa-close text-red small-icons"></i></a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                        <dir-pagination-controls max-size="5"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>

                    </div>
                </div>
        </div>
    </div>
</div>










