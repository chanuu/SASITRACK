<div id="stockreceiveheaderDetail" ng-controller="app.views.stockreceiveheaders.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Stock Receive Header
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.stockReceiveHeader.machineSerialNo }} Details</h3>


            <div class="panel-body">
                <form name="stockreceiveheaderUpdateForm" role="form" novalidate class="form-validation">


                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Receive Note No</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.stockReceiveHeader.receiveNoteNo" name="receiveNoteNo" ng-messages="stockreceiveheaderUpdateForm.receiveNoteNo.$error" required />

                                <div ng-messages="stockreceiveheaderUpdateForm.receiveNoteNo.$error" ng-if="stockreceiveheaderUpdateForm.receiveNoteNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Date </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.stockReceiveHeader.date" name="date" ng-messages="stockreceiveheaderUpdateForm.date.$error" required />

                                <div ng-messages="stockreceiveheaderUpdateForm.date.$error" ng-if="stockreceiveheaderUpdateForm.date.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>

                  
                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Remark</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.stockReceiveHeader.remark" name="remark" ng-maxlength="100" ng-messages="stockreceiveheaderUpdateForm.remark.$error" />

                                <div ng-messages="stockreceiveheaderUpdateForm.remark.$error" ng-if="stockreceiveheaderUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">By </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.stockReceiveHeader.by " />

                                <span class="help-inline"></span>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to stock recieve header</a>

                    </div>


                </form>

            </div>
        </div>

    </div>
</div>