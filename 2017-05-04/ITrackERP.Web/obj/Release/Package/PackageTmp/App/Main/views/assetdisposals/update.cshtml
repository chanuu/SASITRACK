<div id="UpdateAssetDisposalHeader" ng-controller="app.views.assetdisposals.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
           Asset Disposal Headers
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>


            <div class="panel-body">

                <form name="assetDisposalHeaderUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Disposal Note No </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assetdisposal.disposalNoteNo" name="disposalNoteNo" readonly />
                                </div>
                            </div>
                     
                       
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Disposal By</label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assetdisposal.disposalBy" name="disposalBy" readonly />

                            </div>
                        </div>
                    </div>



                    <div class="row margin">
                      
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Date </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assetdisposal.date" name="date" readonly />

                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Approved By </label>
                            
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assetdisposal.approvedBy" name="approvedBy" readonly/>
                               
                                </div>
                            </div>
                        </div>                     
                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Remark </label>

                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assetdisposal.remark" name="remark" ng-maxlength="100" ng-messages="assetDisposalHeaderUpdateForm.remark.$error" />

                                <div ng-messages="assetDisposalHeaderUpdateForm.remark.$error" ng-if="assetDisposalHeaderUpdateForm.remark.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Status</label>                        
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.assetdisposal.status" name="status" readonly/>
                               
                            </div>
                        </div>

                    </div>


                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to asset disposal header</a>

                    </div>



</form>
</div>
        </div>

    </div>
</div>