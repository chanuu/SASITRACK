<div id="CuttingRatios" ng-controller="app.views.cuttingratios.detail as vm">


    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Cutting Ratio Details
        </div>
        <div uib-collapse="isCollapsed" class="panel-body">

            <div class="event-actions">
                <a class="btn btn-sm btn-primary" ng-href="#/cuttingratios" angular-ripple><i class="fa fa-arrow-circle-left"></i> back to workOrder</a>

            </div>

           

            <div class="panel-heading margin">
                <h3 class="block">{{vm.cuttingRatio.ratioNo}} Details </h3>
            </div>

            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Ratio No</label>
                        <div class="controls">

                            <div> {{vm.cuttingRatio.ratioNo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">StyleNo</label>
                        <div class="controls">

                            <div> {{vm.cuttingRatio.styleNo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Color</label>
                        <div class="controls">

                            <div> {{vm.cuttingRatio.color}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">MarkerLength</label>
                        <div class="controls">

                            <div>{{vm.cuttingRatio.markerLength}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Marker Width</label>
                        <div class="controls">

                            <div> {{vm.cuttingRatio.markerWidth}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Layer Length</label>
                        <div class="controls">

                            <div>{{vm.cuttingRatio.layerLength}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Fabric Type</label>
                        <div class="controls">

                            <div> {{vm.cuttingRatio.fabricType}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Remark</label>
                        <div class="controls">

                            <div>{{vm.cuttingRatio.remark}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

            </div>



            <div class="row margin-adjust">

                <button ng-click="vm.workorderCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("Create")</button>
            </div>
            <div class="row margin-adjust">
                <form class="">
                    <div class="input-group">
                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                        </span>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th># </th>
                        <th ng-click="sort('workorderno')">@L("Size") </th>
                        <th>@L("Lot")</th>
                  
                     

                    </tr>
                </thead>
                <tbody>
                    <tr ng-animate="'animate'" dir-paginate="ratio in vm.cuttingRatio.cuttingRatioItem|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                        <td>{{ratio.size}}</td>
                        <td>{{ratio.lot}}</td>
                    


                        <td><a ng-href="#/workorders/{{workorder.id}}"><i class="fa fa-search text-green"></i></a></td>

                    </tr>
                </tbody>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </table>







        </div>
    </div>

</div>

