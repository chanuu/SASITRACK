<div id="MachineTypeDetail" ng-controller="app.views.machinetypes.detail as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Machine Types
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">
            <div class="event-actions">
                <a class="btn btn-primary btn-sm btn-blue" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to machine type</a>

            </div>
            <hr />



            <h3 class="block">{{vm.machinetype.machineTypeName }} Details</h3>


            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Machine Type Name </label>
                        <div class="controls">
                            <div class="">{{vm.machinetype.machineTypeName }}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Category1 </label>
                        <div class="controls">
                            <div class="">{{vm.machinetype.category1 }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Category2 </label>
                        <div class="controls">
                            <div class="">{{vm.machinetype.category2}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Remark</label>
                        <div class="controls">
                            <div class="">{{vm.machinetype.remark}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Is Production Machine </label>
                        <div class="controls">
                            <div type="text" class="">{{vm.machinetype.isProductionMachine }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                  

                </div>
               




            </div>
        </div>

    </div>
</div>