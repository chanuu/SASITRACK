<div id="UpdateDividingPlanDetails" ng-controller="app.views.dividingplans.updateItems as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Dividing Plan Details
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">Update</h3>

           <!-- <pre>{{vm.dividingplan |json}}</pre>-->

            <div class="panel-body">
                <form name="dividingPlanHeaderItemUpdateForm" role="form" novalidate class="form-validation">
                    <div class="row margin">
                        
                        
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Operation No</label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="getOperationFieldsEvent ()" ng-model="selectedOperationCode" uib-typeahead="operationcode as operationcode.operationCode for operationcode in vm.operations | filter:$viewValue | limitTo:8" class="form-control" required>
                                <span class="help-inline"></span>
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Operation Name </label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.operationName" name="operationName" ng-messages="dividingPlanHeaderItemUpdateForm.operationName.$error" required />

                                <div ng-messages="dividingPlanHeaderItemUpdateForm.operationName.$error" ng-if="dividingPlanHeaderItemUpdateForm.operationName.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">SMV Type </label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.smvType" name="smvType" ng-messages="dividingPlanHeaderItemUpdateForm.smvType.$error" required />

                                <div ng-messages="dividingPlanHeaderItemUpdateForm.smvType.$error" ng-if="dividingPlanHeaderItemUpdateForm.smvType.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Machine Type </label>
                          
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.machineType" name="machineType" />                              
                            </div>
                        </div>
                    </div>

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Operation Role  </label>
                            <div class="controls">
                                <input type="text" ng-model="vm.dividingplan.operationRole " class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Part Name </label>
                          
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.partName" name="partName" ng-messages="dividingPlanHeaderItemUpdateForm.partName.$error" required />

                                <div ng-messages="dividingPlanHeaderItemUpdateForm.partName.$error" ng-if="dividingPlanHeaderItemUpdateForm.partName.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">SMV </label>
                            
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.smv" name="smv" ng-messages="dividingPlanHeaderItemUpdateForm.smv.$error" required />

                                <div ng-messages="dividingPlanHeaderItemUpdateForm.smv.$error" ng-if="dividingPlanHeaderItemUpdateForm.smv.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Workstation No </label>
                           
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.dividingplan.workstationNo" name="workstationNo" ng-messages="dividingPlanHeaderItemUpdateForm.workstationNo.$error" required />

                                <div ng-messages="dividingPlanHeaderItemUpdateForm.workstationNo.$error" ng-if="dividingPlanHeaderItemUpdateForm.workstationNo.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Op No </label>
                            <div class="controls">
                                <input type="text" ng-model="vm.dividingplan.opNo" class="form-control">
                                <span class="help-inline"></span>

                            </div>
                        </div>

                    </div>


                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to dividing plan header</a>

                    </div>


                </form>
</div>
        </div>

    </div>
</div>