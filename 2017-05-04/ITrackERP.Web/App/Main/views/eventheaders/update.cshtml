<div id="UpdateEventHeader" ng-controller="app.views.eventheaders.update as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Event Header
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">


            <h3 class="block">{{vm.eventheader.name}} Update</h3>
           
            <div class="panel-body">
                <form name="eventheaderUpdateForm" role="form" novalidate class="form-validation">
                    
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Name</label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.eventheader.name" name="name" ng-messages="eventheaderUpdateForm.name.$error" required />

                                <div ng-messages="eventheaderUpdateForm.name.$error" ng-if="eventheaderUpdateForm.name.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Description </label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.eventheader.description" name="description" ng-maxlength="100" ng-messages="eventheaderUpdateForm.description.$error" />

                                <div ng-messages="eventheaderUpdateForm.description.$error" ng-if="eventheaderUpdateForm.description.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>

                    </div>


                    <div class="row margin">

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Type</label>

                            <div class="controls">
                                <select class="form-control" name="type" ng-model="vm.eventheader.type" required>
                                    <option value="CSR">CSR</option>
                                    <option value="Welfare">Welfare</option>
                                    <option value="Training Programme">Training Programme</option>
                                </select>
                                <span class="help-inline"></span>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Date</label>

                            <p class="input-group">
                                <input type="text" class="form-control" uib-datepicker-popup ng-model="fdate" is-open="dpOpenStatus.fdate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />
                                <span class="input-group-btn">
                                    <button type="button"
                                            class="btn btn-default"
                                            ng-click="setDpOpenStatus('fdate', $event)">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Expected Date </label>

                            <p class="input-group">
                                <input type="text" class="form-control"  uib-datepicker-popup ng-model="edate" is-open="dpOpenStatus.edate" datepicker-options="dateOptions" close-text="Close" alt-input-formats="altInputFormats" />
                                <span class="input-group-btn">
                                    <button type="button"
                                            class="btn btn-default"
                                            ng-click="setDpOpenStatus('edate', $event)">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Frequency</label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.eventheader.frequency" name="name" ng-messages="eventheaderUpdateForm.frequency.$error" required />

                                <div ng-messages="eventheaderUpdateForm.frequency.$error" ng-if="eventheaderUpdateForm.frequency.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                       
                    </div>

                    <div class="row margin">

                        <div class="col-md-6 col-sm-12 margin">
                            <label class="control-label">Department</label>
                            <div class="controls">
                                <input type="text" typeahead-on-select="setLineNo($item)" ng-model="selectedLineNo" uib-typeahead="department as department.name for department in vm.departments | filter:$viewValue | limitTo:8" class="form-control" required>
                                <span class="help-inline"></span>
                            </div>

                        </div>

                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Venue</label>
                            <div class="controls">
                                <input type="text" class="form-control" ng-model="vm.eventheader.venue" name="venue" ng-messages="eventheaderUpdateForm.venue.$error" required />

                                <div ng-messages="eventheaderUpdateForm.venue.$error" ng-if="eventheaderUpdateForm.venue.$touched">

                                    <div ng-messages-include="/App/Main/views/messages.html"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <hr />
                    <div class="event-actions">
                        <a class="btn btn-primary btn-sm btn-green small-icons" ng-click="vm.update()"><i class="fa fa-arrow-circle-left"></i>Save</a>

                        <a class="btn btn-primary btn-sm btn-blue small-icons" ng-click="vm.back()"><i class="fa fa-arrow-circle-left"></i> back to event header</a>

                    </div>



                </form>
            </div>
        </div>

    </div>
</div>

