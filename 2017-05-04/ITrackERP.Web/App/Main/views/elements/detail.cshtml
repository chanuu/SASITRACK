<div id="ElementDetail" ng-controller="app.views.elements.detail as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
           Elements
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">
            <div class="event-actions">
                <a class="btn btn-primary btn-sm btn-blue" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to element</a>

            </div>
            <hr />



            <h3 class="block">{{vm.element.name }} Details</h3>


            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Name </label>
                        <div class="controls">
                            <div class="">{{vm.element.name }}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Length </label>
                        <div class="controls">
                            <div class="">{{vm.element.length }} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                   
                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Width</label>
                        <div class="controls">
                            <div class="">{{vm.element.width}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Category</label>
                        <div class="controls">
                            <div class="">{{vm.element.category}}</div>
                            <span class="help-inline"></span>
                        </div>
                    </div>
                    
                </div>

                <div class="row margin">
                    <div ng-show="vm.element.path != 'N/A'" class="row margin">
                        <div class="col-md-6 col-sm-12">
                            <label class="control-label">Image</label>
                            <div class="controls">
                                <img src="{{vm.element.path}}" class="thumb">
                            </div>
                        </div>
                    </div>
                </div>
            
            </div>
        </div>

    </div>
</div>