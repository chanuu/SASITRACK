<div id="EmployeeDetail" ng-controller="app.views.employees.detail as vm">
    <route-loading-indicator></route-loading-indicator>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>
            </div>
            Employees
        </div>

        <div uib-collapse="isCollapsed" class="panel-body">
            <div class="event-actions">
                <a class="btn btn-primary btn-sm btn-blue" ng-click="vm.backToEventsPage()"><i class="fa fa-arrow-circle-left"></i> back to employees</a>

            </div>
            <hr />

            <h3 class="block">{{vm.employee.fullName}} Details</h3>

            <div class="panel-body">
                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Full Name </label>
                        <div class="controls">
                            <div class="">{{vm.employee.fullName}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Nic No </label>
                        <div class="controls">
                            <div class="">{{vm.employee.nicNo}} </div>
                            <span class="help-inline"></span>

                        </div>
                    </div>
                </div>



                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">EPF No </label>
                        <div class="controls">
                            <div class="">{{vm.employee.epfNo}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">ETF No</label>
                        <div class="controls">
                            <div class="">{{vm.employee.etfNo}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Date of Birth</label>
                        <div class="controls">
                            <div type="text" class="">{{vm.employee.dateOfBirth | date:'yyyy/MM/dd'}} </div>
                            <span class="help-inline"></span>
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Gender</label>
                        <div class="controls">
                            <div type="text" class="">{{vm.employee.gender}} </div>
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Marital Status </label>
                        <div class="controls">
                            <div class="">{{vm.employee.maritalStatus}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Department</label>
                        <div class="controls">
                            <div class="">{{vm.employee.department}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Designation</label>
                        <div class="controls">
                            <div class="">{{vm.employee.designation}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Job Status</label>
                        <div class="controls">
                            <div class="">{{vm.employee.jobStatus}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Address</label>
                        <div class="controls">
                            <div class="">{{vm.employee.address}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Mobile No</label>
                        <div class="controls">
                            <div class="">{{vm.employee.mobileNo}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Land No</label>
                        <div class="controls">
                            <div class="">{{vm.employee.landNo}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Email Address</label>
                        <div class="controls">
                            <div class="">{{vm.employee.emailAddress}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                </div>

                <div class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Emergency Contact No</label>
                        <div class="controls">
                            <div class="">{{vm.employee.emergencyContactNo}}</div>
                            <span class="help-inline"></span>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 margin">
                        <label class="control-label">Emergency Contact Person</label>
                        <div class="controls">
                            <div class="">{{vm.employee.emergencyContactPerson}}</div>
                            <span class="help-inline"></span>
                        </div>
                    </div>

                </div>
                <div ng-show="vm.employee.imagePath != 'N/A'" class="row margin">
                    <div class="col-md-6 col-sm-12">
                        <label class="control-label">Image</label>
                        <div class="controls">
                            <button class="close" aria-hidden="true" ng-click="vm.deleteEmployeeImage(vm.employee)">×</button>
                            <img src="{{vm.employee.imagePath}}" class="thumb">
                        </div>
                    </div>
                </div>

            </div>
        </div>


        <br />
        <br />


        <div class="row">
            <div class="col-lg-12">

                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-chevron-up"></i></a>
                            <a class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                        Specification Of Employee
                    </div>


                    <div uib-collapse="isCollapsed" class="panel-body">
                        <div>

                            <uib-tabset active="active">
                                <uib-tab index="0">
                                    <uib-tab-heading>
                                        <i class="glyphicon glyphicon-bell"></i> Past Employment Details
                                    </uib-tab-heading>
                                    <br>
                                    <br>
                                    <br>
                                    <div class="hpanel">
                                        <div class="panel-heading">
                                            <div class="panel-tools">
                                                <a class="showhide" ng-click="isCollapsed2 = !isCollapsed2"><i class="fa fa-chevron-up"></i></a>
                                                <a class="closebox"><i class="fa fa-times"></i></a>
                                            </div>
                                            Past Employment Details
                                        </div>

                                        <div uib-collapse="isCollapsed2" class="panel-body">

                                            <div class="row margin-adjust">

                                                <button ng-click="vm.pastEmploymentCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreatePastEmployment")</button>
                                            </div>
                                            <div class="row margin-adjust">
                                                <form class="">
                                                    <div class="input-group">
                                                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                                        </span>
                                                    </div>
                                                </form>
                                            </div>

                                            <table class="table table-striped table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th># </th>
                                                        <th>@L("Company Name") </th>                                              
                                                        <th>@L("Designation")</th>
                                                        <th>@L("From Date") </th>
                                                        <th>@L("To Date")</th>
                                                        <th>@L("Remark") </th>
                                                        <th>@L("Action")</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-animate="'animate'" dir-paginate="employee in vm.employee.pastEmployeements|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                                        <td>{{employee.companyName }}</td>
                                                        <td>{{employee.designation }}</td>
                                                        <td>{{employee.fromDate | date:'yyyy/MM/dd'}}</td>
                                                        <td>{{employee.toDate | date:'yyyy/MM/dd'}}</td>
                                                        <td>{{employee.remark }}</td>


                                                        <td>
                                                            <!--  <a ng-href="#/operations/{{operation.id}}"><i class="fa fa-search text-green"></i></a> -->
                                                            <a ng-href="#/employees/item/updatepastemployment/{{employee.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                                            <a ng-click="vm.deletePastEmployment(employee)"><i class="fa fa-close text-red small-icons"></i></a>
                                                        </td>

                                                    </tr>
                                                </tbody>
                                                <dir-pagination-controls max-size="5"
                                                                         direction-links="true"
                                                                         boundary-links="true">
                                                </dir-pagination-controls>
                                            </table>


                                        </div>
                                    </div>

                                </uib-tab>

                                <uib-tab index="3" select="">
                                    <uib-tab-heading>
                                        <i class="glyphicon glyphicon-bell"></i> Promotion Details
                                    </uib-tab-heading>
                                    <br>
                                    <br>
                                    <br>
                                    <div class="hpanel">
                                        <div class="panel-heading">
                                            <div class="panel-tools">
                                                <a class="showhide" ng-click="isCollapsed3 = !isCollapsed3"><i class="fa fa-chevron-up"></i></a>
                                                <a class="closebox"><i class="fa fa-times"></i></a>
                                            </div>
                                            Promotion Details
                                        </div>

                                        <div uib-collapse="isCollapsed3" class="panel-body">

                                            <div class="row margin-adjust">

                                                <button ng-click="vm.promotionCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreatePromotion")</button>
                                            </div>
                                            <div class="row margin-adjust">
                                                <form class="">
                                                    <div class="input-group">
                                                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                                        </span>
                                                    </div>
                                                </form>
                                            </div>

                                            <table class="table table-striped table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th># </th>
                                                        <th>@L("From Designation") </th>
                                                        <th>@L("To Designation")</th>
                                                        <th>@L("Promoted Date")</th>
                                                        <th>@L("Job Description")</th>
                                                        <th>@L("Remark")</th>
                                                        <th>@L("Action")</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-animate="'animate'" dir-paginate="employee in vm.employee.promotions|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                                        <td>{{employee.fromDesignation }}</td>
                                                        <td>{{employee.toDesignation }}</td>
                                                        <td>{{employee.promotedDate | date:'yyyy/MM/dd'}}</td>
                                                        <td>{{employee.jobDescription }}</td>
                                                        <td>{{employee.remark }}</td>


                                                        <td>
                                                            <!--  <a ng-href="#/operations/{{operation.id}}"><i class="fa fa-search text-green"></i></a> -->
                                                            <a ng-href="#/employees/item/updatepromotion/{{employee.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                                            <a ng-click="vm.deletePromotion(employee)"><i class="fa fa-close text-red small-icons"></i></a>
                                                        </td>

                                                    </tr>
                                                </tbody>
                                                <dir-pagination-controls max-size="5"
                                                                         direction-links="true"
                                                                         boundary-links="true">
                                                </dir-pagination-controls>
                                            </table>

                                        </div>
                                    </div>
                                </uib-tab>



                                <uib-tab index="3" select="">
                                    <uib-tab-heading>
                                        <i class="fa fa-life-ring"></i> Award Details
                                    </uib-tab-heading>

                                    <br>
                                    <br>
                                    <br>
                                    <div class="hpanel">
                                        <div class="panel-heading">
                                            <div class="panel-tools">
                                                <a class="showhide" ng-click="isCollapsed4 = !isCollapsed4"><i class="fa fa-chevron-up"></i></a>
                                                <a class="closebox"><i class="fa fa-times"></i></a>
                                            </div>
                                            Award Details
                                        </div>

                                        <div uib-collapse="isCollapsed4" class="panel-body">

                                            <div class="row margin-adjust">

                                                <button ng-click="vm.awardCreationModal()" class="btn btn-primary pull-right btn-green "><i class="fa fa-plus"></i> @L("CreateAward")</button>
                                            </div>
                                            <div class="row margin-adjust">
                                                <form class="">
                                                    <div class="input-group">
                                                        <input type="text" ng-model="search" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                                        </span>
                                                    </div>
                                                </form>
                                            </div>

                                            <table class="table table-striped table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th># </th>
                                                        <th>@L("Award Name") </th>
                                                        <th>@L("Award Date") </th>
                                                        <th>@L("Remark")</th>
                                                        <th>@L("Action")</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-animate="'animate'" dir-paginate="employee in vm.employee.awards|orderBy:sortKey:reverse|filter:search|itemsPerPage:7">
                                                        <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                                        <td>{{employee.awardName }}</td>
                                                        <td>{{employee.awardDate | date:'yyyy/MM/dd'}}</td>
                                                        <td>{{employee.remark }}</td>


                                                        <td>
                                                            <!--  <a ng-href="#/operations/{{operation.id}}"><i class="fa fa-search text-green"></i></a> -->
                                                            <a ng-href="#/employees/item/updateaward/{{employee.id}}"><i class="fa fa-edit text-green small-icons"></i></a>
                                                            <a ng-click="vm.deleteAward(employee)"><i class="fa fa-close text-red small-icons"></i></a>
                                                        </td>

                                                    </tr>
                                                </tbody>
                                                <dir-pagination-controls max-size="5"
                                                                         direction-links="true"
                                                                         boundary-links="true">
                                                </dir-pagination-controls>
                                            </table>
                                        </div>
                                    </div>
                                </uib-tab>

                            </uib-tabset>






                        </div>

                    </div>



                </div>
            </div>
        </div>
    </div>
</div>


